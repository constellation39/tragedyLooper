{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/CardList",
    "definitions": {
        "CardList": {
            "properties": {
                "cards": {
                    "items": {
                        "$ref": "#/definitions/v1.Card"
                    },
                    "type": "array"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card List",
            "description": "CardList holds a list of card instances."
        },
        "v1.Card": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "The ID of the card, linking to a CardConfig"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "Runtime state: whether this card has been used in the current loop"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card",
            "description": "Card represents a runtime instance of a card."
        }
    }
}