{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Script",
    "definitions": {
        "Script": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "main_plot": {
                    "type": "string"
                },
                "sub_plots": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "characters": {
                    "items": {
                        "$ref": "#/definitions/model.CharacterConfig"
                    },
                    "type": "array"
                },
                "tragedies": {
                    "items": {
                        "$ref": "#/definitions/model.TragedyCondition"
                    },
                    "type": "array"
                },
                "loop_count": {
                    "type": "integer"
                },
                "days_per_loop": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Script",
            "description": "Script 定义一个特定的游戏场景。"
        },
        "model.Ability": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "trigger_type": {
                    "enum": [
                        "ABILITY_TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ABILITY_TRIGGER_TYPE_DAY_START",
                        1,
                        "ABILITY_TRIGGER_TYPE_MASTERMIND_PHASE",
                        2,
                        "ABILITY_TRIGGER_TYPE_GOODWILL_PHASE",
                        3,
                        "ABILITY_TRIGGER_TYPE_PASSIVE",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Ability Trigger Type",
                    "description": "AbilityTriggerType 定义能力何时可以被触发。"
                },
                "effect": {
                    "$ref": "#/definitions/model.Effect",
                    "additionalProperties": true
                },
                "once_per_loop": {
                    "type": "boolean"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "used_this_loop": {
                    "type": "boolean"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability",
            "description": "Ability 定义角色的特殊技能。"
        },
        "model.AdjustGoodwillEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "AdjustGoodwillEffect 调整角色的好感度。"
        },
        "model.AdjustIntrigueEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "AdjustIntrigueEffect 调整角色的阴谋值。"
        },
        "model.AdjustParanoiaEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "AdjustParanoiaEffect 调整角色的妄想值。"
        },
        "model.CharacterConfig": {
            "properties": {
                "character_id": {
                    "type": "string"
                },
                "initial_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "ROLE_TYPE_INNOCENT",
                        1,
                        "ROLE_TYPE_KILLER",
                        2,
                        "ROLE_TYPE_BRAIN",
                        3,
                        "ROLE_TYPE_KEY_PERSON",
                        4,
                        "ROLE_TYPE_FRIEND",
                        5,
                        "ROLE_TYPE_CONSPIRACY_THEORIST",
                        6,
                        "ROLE_TYPE_CULTIST",
                        7,
                        "ROLE_TYPE_MASTERMIND",
                        8,
                        "ROLE_TYPE_PROTAGONIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "RoleType 定义了玩家在游戏中的具体角色。"
                },
                "is_culprit_for": {
                    "type": "string"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config",
            "description": "CharacterConfig 定义特定剧本中角色的初始状态。"
        },
        "model.Condition": {
            "properties": {
                "character_id": {
                    "type": "string"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "min_paranoia": {
                    "type": "integer"
                },
                "is_alone": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Condition",
            "description": "Condition 定义悲剧的一个单一条件。"
        },
        "model.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/model.MoveCharacterEffect",
                    "additionalProperties": true
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/model.AdjustParanoiaEffect",
                    "additionalProperties": true
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/model.AdjustGoodwillEffect",
                    "additionalProperties": true
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/model.AdjustIntrigueEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "Effect 接口定义了一个效果的核心行为。"
        },
        "model.MoveCharacterEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "MoveCharacterEffect 移动一个角色到指定地点。"
        },
        "model.TragedyCondition": {
            "properties": {
                "tragedy_type": {
                    "enum": [
                        "TRAGEDY_TYPE_UNSPECIFIED",
                        0,
                        "TRAGEDY_TYPE_A",
                        1,
                        "TRAGEDY_TYPE_B",
                        2,
                        "TRAGEDY_TYPE_C",
                        3,
                        "TRAGEDY_TYPE_D",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Tragedy Type",
                    "description": "TragedyType 定义了剧本中可能发生的悲剧类型。"
                },
                "day": {
                    "type": "integer"
                },
                "culprit_id": {
                    "type": "string"
                },
                "conditions": {
                    "items": {
                        "$ref": "#/definitions/model.Condition"
                    },
                    "type": "array"
                },
                "target_rule": {
                    "enum": [
                        "TARGET_RULE_TYPE_UNSPECIFIED",
                        0,
                        "TARGET_RULE_TYPE_SPECIFIC_CHARACTER",
                        1,
                        "TARGET_RULE_TYPE_ANY_CHARACTER_AT_LOCATION",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Target Rule Type",
                    "description": "TargetRuleType 定义悲剧如何选择目标角色。"
                },
                "abilities": {
                    "items": {
                        "$ref": "#/definitions/model.Ability"
                    },
                    "type": "array"
                },
                "is_active": {
                    "type": "boolean"
                },
                "is_prevented": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Tragedy Condition",
            "description": "TragedyCondition 定义悲剧发生的条件。"
        }
    }
}