{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Script",
    "definitions": {
        "Script": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "剧本唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "剧本名称"
                },
                "description": {
                    "type": "string",
                    "description": "剧本描述"
                },
                "main_plot": {
                    "enum": [
                        "TRAGEDY_SCRIPT_TYPE_UNSPECIFIED",
                        0,
                        "MAIN_PLOT",
                        1,
                        "SUB_PLOT",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Tragedy Script Type",
                    "description": "剧本类型枚举（主线/支线）"
                },
                "sub_plots": {
                    "items": {
                        "enum": [
                            "TRAGEDY_SCRIPT_TYPE_UNSPECIFIED",
                            0,
                            "MAIN_PLOT",
                            1,
                            "SUB_PLOT",
                            2
                        ]
                    },
                    "type": "array",
                    "title": "Tragedy Script Type",
                    "description": "剧本类型枚举（主线/支线）"
                },
                "characters": {
                    "items": {
                        "$ref": "#/definitions/v1.CharacterConfig"
                    },
                    "type": "array",
                    "description": "剧本中角色的初始配置"
                },
                "incidents": {
                    "items": {
                        "$ref": "#/definitions/v1.IncidentConfig"
                    },
                    "type": "array",
                    "description": "剧本中预设的事件（悲剧）配置"
                },
                "loop_count": {
                    "type": "integer",
                    "description": "允许的最大时间循环次数"
                },
                "days_per_loop": {
                    "type": "integer",
                    "description": "每个循环包含的天数"
                },
                "win_conditions": {
                    "items": {
                        "$ref": "#/definitions/v1.GameEndCondition"
                    },
                    "type": "array",
                    "description": "胜利条件列表"
                },
                "lose_conditions": {
                    "items": {
                        "$ref": "#/definitions/v1.GameEndCondition"
                    },
                    "type": "array",
                    "description": "失败条件列表"
                },
                "mastermind_card_ids": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "protagonist_card_ids": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "special_rules_description": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "剧本特有规则的文字描述"
                },
                "tragedies": {
                    "items": {
                        "$ref": "#/definitions/v1.Tragedy"
                    },
                    "type": "array",
                    "description": "剧本中的悲剧列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Script",
            "description": "剧本信息"
        },
        "v1.CharacterConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "角色ID"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "INNOCENT",
                        1,
                        "KILLER",
                        2,
                        "ACCOMPLICE",
                        3,
                        "PERSON_OF_INTEREST",
                        4,
                        "KEY_PERSON",
                        5,
                        "FRIEND",
                        6,
                        "LOVER",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "CULTIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型枚举"
                },
                "initial_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                },
                "initial_paranoia": {
                    "type": "integer",
                    "description": "角色初始妄想值"
                },
                "initial_goodwill": {
                    "type": "integer",
                    "description": "角色初始好感值"
                },
                "initial_intrigue": {
                    "type": "integer",
                    "description": "角色初始阴谋值"
                },
                "initial_ability_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "角色初始拥有的能力ID列表"
                },
                "is_first_step_role": {
                    "type": "boolean",
                    "description": "是否为First Step身份（新版中此概念用于特定剧本）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config",
            "description": "角色在剧本中的配置"
        },
        "v1.Condition": {
            "properties": {
                "stat_condition": {
                    "$ref": "#/definitions/v1.StatCondition",
                    "additionalProperties": true,
                    "description": "属性条件（例如，妄想值达到某阈值）"
                },
                "location_condition": {
                    "$ref": "#/definitions/v1.LocationCondition",
                    "additionalProperties": true,
                    "description": "地点条件（例如，角色在特定地点）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Condition",
            "description": "条件的通用消息，使用 oneof 包含各种具体条件"
        },
        "v1.GameEndCondition": {
            "properties": {
                "type": {
                    "enum": [
                        "CONDITION_TYPE_UNSPECIFIED",
                        0,
                        "ALL_TRAGEDIES_PREVENTED",
                        1,
                        "SPECIFIC_TRAGEDY_TRIGGERED",
                        2,
                        "MAX_LOOPS_REACHED",
                        3,
                        "PROTAGONIST_GUESSED_CORRECTLY",
                        4,
                        "PROTAGONIST_GUESSED_INCORRECTLY",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Condition Type",
                    "description": "条件类型"
                },
                "incident_type": {
                    "enum": [
                        "INCIDENT_TYPE_UNSPECIFIED",
                        0,
                        "MURDER",
                        1,
                        "SUICIDE",
                        2,
                        "HOSPITAL_CONSPIRACY",
                        3,
                        "MURDER_MYSTERY",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Incident Type",
                    "description": "悲剧类型枚举"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Game End Condition",
            "description": "游戏结束条件"
        },
        "v1.IncidentConfig": {
            "properties": {
                "incident_type": {
                    "enum": [
                        "INCIDENT_TYPE_UNSPECIFIED",
                        0,
                        "MURDER",
                        1,
                        "SUICIDE",
                        2,
                        "HOSPITAL_CONSPIRACY",
                        3,
                        "MURDER_MYSTERY",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Incident Type",
                    "description": "悲剧类型枚举"
                },
                "day": {
                    "type": "integer",
                    "description": "悲剧预设发生的日期（第几天）"
                },
                "culprit_character_id": {
                    "type": "integer",
                    "description": "导致悲剧发生的角色ID（如果适用，例如谋杀案的凶手）"
                },
                "conditions": {
                    "items": {
                        "$ref": "#/definitions/v1.Condition"
                    },
                    "type": "array",
                    "description": "触发悲剧所需满足的条件列表"
                },
                "is_main_plot_incident": {
                    "type": "boolean",
                    "description": "是否是主线剧情的事件（新增）"
                },
                "name": {
                    "type": "string",
                    "description": "bool is_preventable = 6;         // 如果某些事件不可阻止，可以添加此字段"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Incident Config",
            "description": "事件/悲剧在剧本中的配置"
        },
        "v1.LocationCondition": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                },
                "is_alone": {
                    "type": "boolean",
                    "description": "是否在该地点独处"
                },
                "not_alone": {
                    "type": "boolean",
                    "description": "是否在该地点不独处"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition",
            "description": "地点条件"
        },
        "v1.StatCondition": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "PARANOIA_STAT",
                        1,
                        "GOODWILL_STAT",
                        2,
                        "INTRIGUE_STAT",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type",
                    "description": "属性类型"
                },
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "GREATER_THAN",
                        1,
                        "LESS_THAN",
                        2,
                        "EQUAL_TO",
                        3,
                        "GREATER_THAN_OR_EQUAL",
                        4,
                        "LESS_THAN_OR_EQUAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "比较符"
                },
                "value": {
                    "type": "integer",
                    "description": "比较的值"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition",
            "description": "属性条件"
        },
        "v1.Tragedy": {
            "properties": {
                "tragedy_type": {
                    "enum": [
                        "INCIDENT_TYPE_UNSPECIFIED",
                        0,
                        "MURDER",
                        1,
                        "SUICIDE",
                        2,
                        "HOSPITAL_CONSPIRACY",
                        3,
                        "MURDER_MYSTERY",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Incident Type",
                    "description": "悲剧类型枚举"
                },
                "day": {
                    "type": "integer"
                },
                "conditions": {
                    "items": {
                        "$ref": "#/definitions/v1.Condition"
                    },
                    "type": "array"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Tragedy",
            "description": "Tragedy represents a tragedy in the script."
        }
    }
}