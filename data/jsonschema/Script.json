{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Script",
    "definitions": {
        "Script": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "唯一标识符"
                },
                "name": {
                    "type": "string",
                    "description": "剧本名称"
                },
                "description": {
                    "type": "string",
                    "description": "剧本描述"
                },
                "main_plot": {
                    "type": "string",
                    "description": "主线剧情"
                },
                "sub_plots": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "支线剧情"
                },
                "characters": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.CharacterConfig"
                    },
                    "type": "array",
                    "description": "角色配置"
                },
                "tragedies": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.TragedyCondition"
                    },
                    "type": "array",
                    "description": "悲剧条件"
                },
                "loop_count": {
                    "type": "integer",
                    "description": "循环总次数"
                },
                "days_per_loop": {
                    "type": "integer",
                    "description": "每循环天数"
                },
                "win_conditions": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.GameEndCondition"
                    },
                    "type": "array",
                    "description": "胜利条件"
                },
                "lose_conditions": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.GameEndCondition"
                    },
                    "type": "array",
                    "description": "失败条件"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Script",
            "description": "Script 定义一个特定的游戏场景。"
        },
        "proto.v1.Ability": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string",
                    "description": "能力名称"
                },
                "description": {
                    "type": "string",
                    "description": "能力描述"
                },
                "trigger_type": {
                    "enum": [
                        "ABILITY_TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ABILITY_TRIGGER_TYPE_DAY_START",
                        1,
                        "ABILITY_TRIGGER_TYPE_MASTERMIND_PHASE",
                        2,
                        "ABILITY_TRIGGER_TYPE_GOODWILL_PHASE",
                        3,
                        "ABILITY_TRIGGER_TYPE_PASSIVE",
                        4,
                        "ABILITY_TRIGGER_TYPE_CARD_RESOLUTION",
                        5,
                        "ABILITY_TRIGGER_TYPE_INCIDENT",
                        6,
                        "ABILITY_TRIGGER_TYPE_PLAYER_ACTION",
                        7
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Ability Trigger Type",
                    "description": "AbilityTriggerType 定义能力何时可以被触发。"
                },
                "effect": {
                    "$ref": "#/definitions/proto.v1.Effect",
                    "additionalProperties": true,
                    "description": "实际效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "每循环只能使用一次"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态，不用于配置"
                },
                "target": {
                    "$ref": "#/definitions/proto.v1.Target",
                    "additionalProperties": true
                },
                "cost": {
                    "type": "integer",
                    "description": "Cost in goodwill to use the ability"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability",
            "description": "Ability 定义角色的特殊技能。"
        },
        "proto.v1.AdjustGoodwillEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "AdjustGoodwillEffect 调整角色的好感度。"
        },
        "proto.v1.AdjustIntrigueEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "AdjustIntrigueEffect 调整角色的阴谋值。"
        },
        "proto.v1.AdjustParanoiaEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "AdjustParanoiaEffect 调整角色的妄想值。"
        },
        "proto.v1.CharacterConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "引用基础角色定义"
                },
                "name": {
                    "type": "string",
                    "description": "角色名称"
                },
                "initial_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "ROLE_TYPE_INNOCENT",
                        1,
                        "ROLE_TYPE_KILLER",
                        2,
                        "ROLE_TYPE_BRAIN",
                        3,
                        "ROLE_TYPE_KEY_PERSON",
                        4,
                        "ROLE_TYPE_FRIEND",
                        5,
                        "ROLE_TYPE_CONSPIRACY_THEORIST",
                        6,
                        "ROLE_TYPE_CULTIST",
                        7,
                        "ROLE_TYPE_MASTERMIND",
                        8,
                        "ROLE_TYPE_PROTAGONIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "RoleType 定义了玩家在游戏中的具体角色。"
                },
                "is_culprit_for": {
                    "type": "string",
                    "description": "如果此角色是特定悲剧的嫌疑犯"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config",
            "description": "CharacterConfig 定义特定剧本中角色的初始状态。"
        },
        "proto.v1.Condition": {
            "properties": {
                "stat_condition": {
                    "$ref": "#/definitions/proto.v1.StatCondition",
                    "additionalProperties": true
                },
                "location_condition": {
                    "$ref": "#/definitions/proto.v1.LocationCondition",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Condition",
            "description": "Condition 定义悲剧的一个单一条件。"
        },
        "proto.v1.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/proto.v1.MoveCharacterEffect",
                    "additionalProperties": true
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustParanoiaEffect",
                    "additionalProperties": true
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustGoodwillEffect",
                    "additionalProperties": true
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustIntrigueEffect",
                    "additionalProperties": true
                },
                "forbid_movement_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidMovementEffect",
                    "additionalProperties": true
                },
                "forbid_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidParanoiaEffect",
                    "additionalProperties": true
                },
                "forbid_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidGoodwillEffect",
                    "additionalProperties": true
                },
                "forbid_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidIntrigueEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "Effect 接口定义了一个效果的核心行为。"
        },
        "proto.v1.ForbidGoodwillEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Goodwill Effect",
            "description": "ForbidGoodwillEffect 禁止好感度增加。"
        },
        "proto.v1.ForbidIntrigueEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Intrigue Effect",
            "description": "ForbidIntrigueEffect 禁止阴谋值增加。"
        },
        "proto.v1.ForbidMovementEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Movement Effect",
            "description": "ForbidMovementEffect 禁止角色移动。"
        },
        "proto.v1.ForbidParanoiaEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Paranoia Effect",
            "description": "ForbidParanoiaEffect 禁止妄想值增加。"
        },
        "proto.v1.GameEndCondition": {
            "properties": {
                "type": {
                    "enum": [
                        "GAME_END_CONDITION_TYPE_UNSPECIFIED",
                        0,
                        "GAME_END_CONDITION_TYPE_ALL_TRAGEDIES_PREVENTED",
                        1,
                        "GAME_END_CONDITION_TYPE_A_TRAGEDY_OCCURS",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Game End Condition Type",
                    "description": "Enum for different types of game end conditions"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Game End Condition",
            "description": "Defines a single condition for winning or losing the game."
        },
        "proto.v1.LocationCondition": {
            "properties": {
                "character_id": {
                    "type": "string"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "is_alone": {
                    "type": "boolean",
                    "description": "是否独处"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition"
        },
        "proto.v1.MoveCharacterEffect": {
            "properties": {
                "destination": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "MoveCharacterEffect 移动一个角色到指定地点。"
        },
        "proto.v1.StatCondition": {
            "properties": {
                "character_id": {
                    "type": "string"
                },
                "stat": {
                    "enum": [
                        "STAT_UNSPECIFIED",
                        0,
                        "STAT_PARANOIA",
                        1,
                        "STAT_GOODWILL",
                        2,
                        "STAT_INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat",
                    "description": "Enum for the type of attribute to check"
                },
                "operator": {
                    "enum": [
                        "OPERATOR_UNSPECIFIED",
                        0,
                        "OPERATOR_GREATER_THAN",
                        1,
                        "OPERATOR_LESS_THAN",
                        2,
                        "OPERATOR_EQUAL_TO",
                        3,
                        "OPERATOR_GREATER_THAN_OR_EQUAL_TO",
                        4,
                        "OPERATOR_LESS_THAN_OR_EQUAL_TO",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Operator",
                    "description": "Enum for the comparison operator"
                },
                "value": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition"
        },
        "proto.v1.Target": {
            "properties": {
                "character_id": {
                    "type": "integer"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target"
        },
        "proto.v1.TragedyCondition": {
            "properties": {
                "tragedy_type": {
                    "enum": [
                        "TRAGEDY_TYPE_UNSPECIFIED",
                        0,
                        "TRAGEDY_TYPE_MURDER",
                        1,
                        "TRAGEDY_TYPE_SUICIDE",
                        2,
                        "TRAGEDY_TYPE_SEALED",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Tragedy Type",
                    "description": "TragedyType 定义了剧本中可能发生的悲剧类型。 TragedyType 定义了在游戏中可能发生的悲剧类型。"
                },
                "day": {
                    "type": "integer",
                    "description": "悲剧可能发生的日期"
                },
                "culprit_id": {
                    "type": "string",
                    "description": "嫌疑人ID"
                },
                "conditions": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.Condition"
                    },
                    "type": "array",
                    "description": "必须满足的条件列表"
                },
                "target_rule": {
                    "enum": [
                        "TARGET_RULE_TYPE_UNSPECIFIED",
                        0,
                        "TARGET_RULE_TYPE_SPECIFIC_CHARACTER",
                        1,
                        "TARGET_RULE_TYPE_ANY_CHARACTER_AT_LOCATION",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Target Rule Type",
                    "description": "TargetRuleType 定义悲剧如何选择目标角色。"
                },
                "abilities": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.Ability"
                    },
                    "type": "array",
                    "description": "悲剧发生时触发的能力"
                },
                "is_active": {
                    "type": "boolean",
                    "description": "运行时状态：此悲剧当前是否在剧本中活跃？"
                },
                "is_prevented": {
                    "type": "boolean",
                    "description": "运行时状态：此悲剧是否已被阻止？"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Tragedy Condition",
            "description": "TragedyCondition 定义悲剧发生的条件。"
        }
    }
}