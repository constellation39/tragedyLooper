{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Ability",
    "definitions": {
        "Ability": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string",
                    "description": "能力名称"
                },
                "description": {
                    "type": "string",
                    "description": "能力描述"
                },
                "trigger_type": {
                    "enum": [
                        "TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "TRIGGER_TYPE_ON_GAME_SETUP",
                        1,
                        "TRIGGER_TYPE_ON_LOOP_START",
                        2,
                        "TRIGGER_TYPE_ON_DAY_START",
                        3,
                        "TRIGGER_TYPE_ON_CARD_PLAY_PHASE",
                        4,
                        "TRIGGER_TYPE_ON_CARD_REVEAL_PHASE",
                        5,
                        "TRIGGER_TYPE_ON_CARD_RESOLVE_PHASE",
                        6,
                        "TRIGGER_TYPE_ON_ABILITY_PHASE",
                        7,
                        "TRIGGER_TYPE_ON_INCIDENT_PHASE",
                        8,
                        "TRIGGER_TYPE_ON_GAME_EVENT",
                        15,
                        "TRIGGER_TYPE_PASSIVE",
                        20
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Trigger Type",
                    "description": "TriggerType 定义了能力、规则或效果何时被激活或评估。 这个统一的枚举旨在澄清触发机制，明确区分基于游戏阶段的触发和基于事件的触发。 好的设计实践建议将触发条件与效果分离开来。 例如，一个能力可以有一个 `TriggerType` 来定义“何时”检查，以及一个效果列表来定义“做什么”。"
                },
                "event_filters": {
                    "items": {
                        "enum": [
                            "GAME_EVENT_TYPE_UNSPECIFIED",
                            0,
                            "GAME_EVENT_TYPE_CARD_PLAYED",
                            1,
                            "GAME_EVENT_TYPE_CHARACTER_MOVED",
                            2,
                            "GAME_EVENT_TYPE_PARANOIA_ADJUSTED",
                            3,
                            "GAME_EVENT_TYPE_GOODWILL_ADJUSTED",
                            4,
                            "GAME_EVENT_TYPE_INTRIGUE_ADJUSTED",
                            5,
                            "GAME_EVENT_TYPE_ABILITY_USED",
                            6,
                            "GAME_EVENT_TYPE_TRAGEDY_TRIGGERED",
                            7,
                            "GAME_EVENT_TYPE_TRAGEDY_PREVENTED",
                            8,
                            "GAME_EVENT_TYPE_DAY_ADVANCED",
                            9,
                            "GAME_EVENT_TYPE_LOOP_RESET",
                            10,
                            "GAME_EVENT_TYPE_GAME_OVER",
                            11,
                            "GAME_EVENT_TYPE_PLAYER_GUESS",
                            12,
                            "GAME_EVENT_TYPE_CHOICE_REQUIRED",
                            13,
                            "GAME_EVENT_TYPE_INCIDENT_TRIGGERED",
                            14
                        ]
                    },
                    "type": "array",
                    "title": "Game Event Type",
                    "description": "GameEventType for GameEvent"
                },
                "target": {
                    "$ref": "#/definitions/proto.v1.Target",
                    "additionalProperties": true,
                    "description": "目标"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "每个循环只能使用一次"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "effect": {
                    "$ref": "#/definitions/proto.v1.Effect",
                    "additionalProperties": true
                },
                "used_this_loop": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability",
            "description": "Ability 定义角色的特殊技能。"
        },
        "proto.v1.AdjustGoodwillEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "AdjustGoodwillEffect 调整角色的好感度。"
        },
        "proto.v1.AdjustIntrigueEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "AdjustIntrigueEffect 调整角色的阴谋值。"
        },
        "proto.v1.AdjustParanoiaEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "AdjustParanoiaEffect 调整角色的妄想值。"
        },
        "proto.v1.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/proto.v1.MoveCharacterEffect",
                    "additionalProperties": true
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustParanoiaEffect",
                    "additionalProperties": true
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustGoodwillEffect",
                    "additionalProperties": true
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustIntrigueEffect",
                    "additionalProperties": true
                },
                "forbid_movement_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidMovementEffect",
                    "additionalProperties": true
                },
                "forbid_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidParanoiaEffect",
                    "additionalProperties": true
                },
                "forbid_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidGoodwillEffect",
                    "additionalProperties": true
                },
                "forbid_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidIntrigueEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "Effect 接口定义了一个效果的核心行为。"
        },
        "proto.v1.ForbidGoodwillEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Goodwill Effect",
            "description": "ForbidGoodwillEffect 禁止好感度增加。"
        },
        "proto.v1.ForbidIntrigueEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Intrigue Effect",
            "description": "ForbidIntrigueEffect 禁止阴谋值增加。"
        },
        "proto.v1.ForbidMovementEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Movement Effect",
            "description": "ForbidMovementEffect 禁止角色移动。"
        },
        "proto.v1.ForbidParanoiaEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Paranoia Effect",
            "description": "ForbidParanoiaEffect 禁止妄想值增加。"
        },
        "proto.v1.MoveCharacterEffect": {
            "properties": {
                "destination": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "MoveCharacterEffect 移动一个角色到指定地点。"
        },
        "proto.v1.Target": {
            "properties": {
                "character_id": {
                    "type": "integer"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target"
        }
    }
}