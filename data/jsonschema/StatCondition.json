{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/StatCondition",
    "definitions": {
        "StatCondition": {
            "properties": {
                "character_id": {
                    "type": "string"
                },
                "stat": {
                    "enum": [
                        "STAT_UNSPECIFIED",
                        0,
                        "STAT_PARANOIA",
                        1,
                        "STAT_GOODWILL",
                        2,
                        "STAT_INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat",
                    "description": "Enum for the type of attribute to check"
                },
                "operator": {
                    "enum": [
                        "OPERATOR_UNSPECIFIED",
                        0,
                        "OPERATOR_GREATER_THAN",
                        1,
                        "OPERATOR_LESS_THAN",
                        2,
                        "OPERATOR_EQUAL_TO",
                        3,
                        "OPERATOR_GREATER_THAN_OR_EQUAL_TO",
                        4,
                        "OPERATOR_LESS_THAN_OR_EQUAL_TO",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Operator",
                    "description": "Enum for the comparison operator"
                },
                "value": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition"
        }
    }
}