{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/StatCondition",
    "definitions": {
        "StatCondition": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "PARANOIA_STAT",
                        1,
                        "GOODWILL_STAT",
                        2,
                        "INTRIGUE_STAT",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type",
                    "description": "属性类型"
                },
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "GREATER_THAN",
                        1,
                        "LESS_THAN",
                        2,
                        "EQUAL_TO",
                        3,
                        "GREATER_THAN_OR_EQUAL",
                        4,
                        "LESS_THAN_OR_EQUAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "比较符"
                },
                "value": {
                    "type": "integer",
                    "description": "比较的值"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition",
            "description": "属性条件"
        }
    }
}