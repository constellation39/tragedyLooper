{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/LocationCondition",
    "definitions": {
        "LocationCondition": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                },
                "is_alone": {
                    "type": "boolean",
                    "description": "是否在该地点独处"
                },
                "not_alone": {
                    "type": "boolean",
                    "description": "是否在该地点不独处"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition",
            "description": "地点条件"
        }
    }
}