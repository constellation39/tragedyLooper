{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/LocationCondition",
    "definitions": {
        "LocationCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色选择器"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "is_at_location": {
                    "type": "boolean",
                    "description": "是否在该地点 (默认为true)"
                },
                "is_alone": {
                    "type": "boolean",
                    "description": "是否在该地点独处"
                },
                "not_alone": {
                    "type": "boolean",
                    "description": "是否在该地点不独处"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition",
            "description": "地点条件"
        },
        "tragedylooper.v1.TargetSelector": {
            "properties": {
                "selector_type": {
                    "enum": [
                        "SELECTOR_TYPE_UNSPECIFIED",
                        0,
                        "SELECTOR_TYPE_SPECIFIC_CHARACTER",
                        1,
                        "SELECTOR_TYPE_TRIGGERING_CHARACTER",
                        2,
                        "SELECTOR_TYPE_CULPRIT",
                        3,
                        "SELECTOR_TYPE_VICTIM",
                        4,
                        "SELECTOR_TYPE_ANY_CHARACTER_WITH_ROLE",
                        5,
                        "SELECTOR_TYPE_ALL_CHARACTERS_AT_LOCATION",
                        6,
                        "SELECTOR_TYPE_ABILITY_USER",
                        7,
                        "SELECTOR_TYPE_ABILITY_TARGET",
                        8,
                        "SELECTOR_TYPE_ALL_CHARACTERS",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Selector Type"
                },
                "character_id": {
                    "type": "integer",
                    "description": "当类型为 SPECIFIC_CHARACTER 时使用"
                },
                "role_filter": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "ROLE_TYPE_ROLE_UNKNOWN",
                        1,
                        "ROLE_TYPE_PERSON",
                        2,
                        "ROLE_TYPE_KILLER",
                        3,
                        "ROLE_TYPE_BRAIN",
                        4,
                        "ROLE_TYPE_KEY_PERSON",
                        5,
                        "ROLE_TYPE_CULTIST",
                        6,
                        "ROLE_TYPE_FRIEND",
                        7,
                        "ROLE_TYPE_LOVED_ONE",
                        8,
                        "ROLE_TYPE_CONSPIRACY_THEORIST",
                        9,
                        "ROLE_TYPE_SERIAL_KILLER",
                        10,
                        "ROLE_TYPE_FACTOR",
                        11,
                        "ROLE_TYPE_WITCH",
                        12,
                        "ROLE_TYPE_TIME_TRAVELER",
                        13
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型"
                },
                "location_filter": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target Selector",
            "description": "目标选择器，用于动态指定条件或效果的目标"
        }
    }
}