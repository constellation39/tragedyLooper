{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/CardConfig",
    "definitions": {
        "CardConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "卡牌唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "卡牌名称"
                },
                "description": {
                    "type": "string",
                    "description": "卡牌描述"
                },
                "type": {
                    "enum": [
                        "CARD_TYPE_UNSPECIFIED",
                        0,
                        "MOVE_HORIZONTALLY",
                        1,
                        "PARANOIA_PLUS",
                        2,
                        "PARANOIA_MINUS",
                        3,
                        "GOODWILL_PLUS",
                        4,
                        "GOODWILL_MINUS",
                        5,
                        "INTRIGUE_PLUS",
                        6,
                        "FORBID_MOVEMENT",
                        7,
                        "FORBID_PARANOIA_INCREASE",
                        8,
                        "FORBID_GOODWILL_INCREASE",
                        9,
                        "FORBID_INTRIGUE_INCREASE",
                        10,
                        "MOVE_VERTICALLY",
                        11,
                        "MOVE_DIAGONALLY",
                        12,
                        "ADD_PARANOIA",
                        13,
                        "ADD_GOODWILL",
                        14,
                        "ADD_INTRIGUE",
                        15
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Card Type",
                    "description": "卡牌类型"
                },
                "owner_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色"
                },
                "effect": {
                    "$ref": "#/definitions/v1.CompoundEffect",
                    "additionalProperties": true,
                    "description": "卡牌效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "是否每循环只能使用一次"
                },
                "priority": {
                    "type": "integer",
                    "description": "卡牌结算优先级（同类型卡牌的结算顺序）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card Config",
            "description": "卡牌静态配置"
        },
        "v1.AddTraitEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "trait": {
                    "type": "string",
                    "description": "要添加的特征"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Add Trait Effect",
            "description": "添加特征效果"
        },
        "v1.AdjustStatEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "PARANOIA",
                        1,
                        "GOODWILL",
                        2,
                        "INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Stat Effect",
            "description": "调整属性效果"
        },
        "v1.ChangeRoleEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "new_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "ROLE_UNKNOWN",
                        1,
                        "PERSON",
                        2,
                        "KILLER",
                        3,
                        "BRAIN",
                        4,
                        "KEY_PERSON",
                        5,
                        "CULTIST",
                        6,
                        "FRIEND",
                        7,
                        "LOVED_ONE",
                        8,
                        "CONSPIRACY_THEORIST",
                        9,
                        "SERIAL_KILLER",
                        10,
                        "FACTOR",
                        11,
                        "WITCH",
                        12,
                        "TIME_TRAVELER",
                        13
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Change Role Effect",
            "description": "改变身份效果"
        },
        "v1.CompoundEffect": {
            "properties": {
                "operator": {
                    "enum": [
                        "OPERATOR_UNSPECIFIED",
                        0,
                        "SEQUENCE",
                        1,
                        "CHOOSE_ONE",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Operator"
                },
                "sub_effects": {
                    "items": {
                        "$ref": "#/definitions/v1.Effect"
                    },
                    "type": "array",
                    "description": "子效果列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Compound Effect",
            "description": "复合效果，用于组合多个效果"
        },
        "v1.Effect": {
            "properties": {
                "adjust_stat": {
                    "$ref": "#/definitions/v1.AdjustStatEffect",
                    "additionalProperties": true,
                    "description": "调整属性"
                },
                "move_character": {
                    "$ref": "#/definitions/v1.MoveCharacterEffect",
                    "additionalProperties": true,
                    "description": "移动角色"
                },
                "forbid": {
                    "$ref": "#/definitions/v1.ForbidEffect",
                    "additionalProperties": true,
                    "description": "禁止行动"
                },
                "grant_ability": {
                    "$ref": "#/definitions/v1.GrantAbilityEffect",
                    "additionalProperties": true,
                    "description": "授予能力"
                },
                "reveal_role": {
                    "$ref": "#/definitions/v1.RevealRoleEffect",
                    "additionalProperties": true,
                    "description": "揭示身份"
                },
                "change_role": {
                    "$ref": "#/definitions/v1.ChangeRoleEffect",
                    "additionalProperties": true,
                    "description": "改变身份"
                },
                "trigger_incident": {
                    "$ref": "#/definitions/v1.TriggerIncidentEffect",
                    "additionalProperties": true,
                    "description": "触发事件"
                },
                "end_game": {
                    "$ref": "#/definitions/v1.EndGameEffect",
                    "additionalProperties": true,
                    "description": "结束游戏"
                },
                "add_trait": {
                    "$ref": "#/definitions/v1.AddTraitEffect",
                    "additionalProperties": true,
                    "description": "添加特征"
                },
                "remove_trait": {
                    "$ref": "#/definitions/v1.RemoveTraitEffect",
                    "additionalProperties": true,
                    "description": "移除特征"
                },
                "compound_effect": {
                    "$ref": "#/definitions/v1.CompoundEffect",
                    "additionalProperties": true,
                    "description": "复合效果"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "效果，定义了能力、卡牌或规则的具体作用"
        },
        "v1.EndGameEffect": {
            "properties": {
                "winner": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色"
                },
                "reason": {
                    "type": "string",
                    "description": "游戏结束原因描述"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "End Game Effect",
            "description": "结束游戏效果"
        },
        "v1.ForbidEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "forbid_type": {
                    "enum": [
                        "FORBID_TYPE_UNSPECIFIED",
                        0,
                        "MOVEMENT",
                        1,
                        "PARANOIA_CHANGE",
                        2,
                        "GOODWILL_CHANGE",
                        3,
                        "INTRIGUE_CHANGE",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Forbid Type"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Effect",
            "description": "禁止效果"
        },
        "v1.GrantAbilityEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "ability_id": {
                    "type": "integer",
                    "description": "授予的能力ID"
                },
                "is_temporary": {
                    "type": "boolean",
                    "description": "是否是临时能力（例如，只持续一天或一循环）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Grant Ability Effect",
            "description": "授予能力效果"
        },
        "v1.MoveCharacterEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "destination": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "移动角色效果"
        },
        "v1.RemoveTraitEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                },
                "trait": {
                    "type": "string",
                    "description": "要移除的特征"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Remove Trait Effect",
            "description": "移除特征效果"
        },
        "v1.RevealRoleEffect": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Reveal Role Effect",
            "description": "揭示身份效果"
        },
        "v1.TargetSelector": {
            "properties": {
                "selector_type": {
                    "enum": [
                        "SELECTOR_TYPE_UNSPECIFIED",
                        0,
                        "SPECIFIC_CHARACTER",
                        1,
                        "TRIGGERING_CHARACTER",
                        2,
                        "CULPRIT",
                        3,
                        "VICTIM",
                        4,
                        "ANY_CHARACTER_WITH_ROLE",
                        5,
                        "ALL_CHARACTERS_AT_LOCATION",
                        6,
                        "ABILITY_USER",
                        7,
                        "ABILITY_TARGET",
                        8,
                        "ALL_CHARACTERS",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Selector Type"
                },
                "character_id": {
                    "type": "integer",
                    "description": "当类型为 SPECIFIC_CHARACTER 时使用"
                },
                "role_filter": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "ROLE_UNKNOWN",
                        1,
                        "PERSON",
                        2,
                        "KILLER",
                        3,
                        "BRAIN",
                        4,
                        "KEY_PERSON",
                        5,
                        "CULTIST",
                        6,
                        "FRIEND",
                        7,
                        "LOVED_ONE",
                        8,
                        "CONSPIRACY_THEORIST",
                        9,
                        "SERIAL_KILLER",
                        10,
                        "FACTOR",
                        11,
                        "WITCH",
                        12,
                        "TIME_TRAVELER",
                        13
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型"
                },
                "location_filter": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target Selector",
            "description": "目标选择器，用于动态指定条件或效果的目标"
        },
        "v1.TriggerIncidentEffect": {
            "properties": {
                "incident_id": {
                    "type": "integer",
                    "description": "要触发的事件ID (引用ScriptConfig中的IncidentConfig)"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Trigger Incident Effect",
            "description": "触发事件效果"
        }
    }
}