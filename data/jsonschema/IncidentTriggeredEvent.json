{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/IncidentTriggeredEvent",
    "definitions": {
        "IncidentTriggeredEvent": {
            "properties": {
                "incident": {
                    "$ref": "#/definitions/v1.Incident",
                    "additionalProperties": true,
                    "description": "被触发的事件详情"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Incident Triggered Event",
            "description": "事件触发事件"
        },
        "v1.CompoundCondition": {
            "properties": {
                "operator": {
                    "enum": [
                        "OPERATOR_UNSPECIFIED",
                        0,
                        "AND",
                        1,
                        "OR",
                        2,
                        "NOT",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Operator"
                },
                "sub_conditions": {
                    "items": {
                        "$ref": "#/definitions/v1.Condition"
                    },
                    "type": "array",
                    "description": "子条件列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Compound Condition",
            "description": "复合条件，用于组合多个条件"
        },
        "v1.Condition": {
            "properties": {
                "stat_condition": {
                    "$ref": "#/definitions/v1.StatCondition",
                    "additionalProperties": true,
                    "description": "属性条件"
                },
                "location_condition": {
                    "$ref": "#/definitions/v1.LocationCondition",
                    "additionalProperties": true,
                    "description": "地点条件"
                },
                "role_condition": {
                    "$ref": "#/definitions/v1.RoleCondition",
                    "additionalProperties": true,
                    "description": "身份条件"
                },
                "trait_condition": {
                    "$ref": "#/definitions/v1.TraitCondition",
                    "additionalProperties": true,
                    "description": "特征条件"
                },
                "day_condition": {
                    "$ref": "#/definitions/v1.DayCondition",
                    "additionalProperties": true,
                    "description": "日期条件"
                },
                "player_condition": {
                    "$ref": "#/definitions/v1.PlayerCondition",
                    "additionalProperties": true,
                    "description": "玩家条件"
                },
                "compound_condition": {
                    "$ref": "#/definitions/v1.CompoundCondition",
                    "additionalProperties": true,
                    "description": "复合条件 (AND/OR/NOT)"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Condition",
            "description": "条件，用于规则、事件和效果的触发判断"
        },
        "v1.DayCondition": {
            "properties": {
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "BEFORE",
                        1,
                        "ON",
                        2,
                        "AFTER",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator"
                },
                "day": {
                    "type": "integer",
                    "description": "目标天数"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Day Condition",
            "description": "日期条件"
        },
        "v1.Incident": {
            "properties": {
                "config": {
                    "$ref": "#/definitions/v1.IncidentConfig",
                    "additionalProperties": true,
                    "description": "事件唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "事件名称"
                },
                "day": {
                    "type": "integer",
                    "description": "事件发生的日期"
                },
                "culprit": {
                    "type": "string",
                    "description": "犯人（角色名称或描述）"
                },
                "victim": {
                    "type": "string",
                    "description": "受害者（角色名称或描述）"
                },
                "description": {
                    "type": "string",
                    "description": "事件描述"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Incident",
            "description": "事件实例，在游戏运行时创建"
        },
        "v1.IncidentConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "事件唯一ID（剧本内）"
                },
                "name": {
                    "type": "string",
                    "description": "事件名称"
                },
                "description": {
                    "type": "string",
                    "description": "事件描述"
                },
                "incident_type": {
                    "enum": [
                        "INCIDENT_TYPE_UNSPECIFIED",
                        0,
                        "MURDER",
                        1,
                        "SUICIDE",
                        2,
                        "ACCIDENT",
                        3,
                        "DISAPPEARANCE",
                        4,
                        "HOSPITAL_CONSPIRACY",
                        5,
                        "MURDER_MYSTERY",
                        6,
                        "PANIC",
                        7
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Incident Type",
                    "description": "事件类型"
                },
                "day": {
                    "type": "integer",
                    "description": "预定发生日期"
                },
                "trigger_conditions": {
                    "items": {
                        "$ref": "#/definitions/v1.Condition"
                    },
                    "type": "array",
                    "description": "触发条件列表"
                },
                "is_mandatory": {
                    "type": "boolean",
                    "description": "是否为必发事件"
                },
                "culprit_character_id": {
                    "type": "integer",
                    "description": "事件主谋角色ID（如适用）"
                },
                "location_id": {
                    "type": "integer",
                    "description": "事件发生地点ID（如适用）"
                },
                "is_main_plot_incident": {
                    "type": "boolean",
                    "description": "是否是主线剧情的事件"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Incident Config",
            "description": "事件/悲剧在剧本中的配置"
        },
        "v1.LocationCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色选择器"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "is_at_location": {
                    "type": "boolean",
                    "description": "是否在该地点 (默认为true)"
                },
                "is_alone": {
                    "type": "boolean",
                    "description": "是否在该地点独处"
                },
                "not_alone": {
                    "type": "boolean",
                    "description": "是否在该地点不独处"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition",
            "description": "地点条件"
        },
        "v1.PlayerCondition": {
            "properties": {
                "player_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player Condition",
            "description": "玩家条件"
        },
        "v1.RoleCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色选择器"
                },
                "role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "PERSON",
                        1,
                        "KILLER",
                        2,
                        "BRAIN",
                        3,
                        "KEY_PERSON",
                        4,
                        "CULTIST",
                        5,
                        "FRIEND",
                        6,
                        "LOVED_ONE",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "SERIAL_KILLER",
                        9,
                        "FACTOR",
                        10,
                        "WITCH",
                        11,
                        "TIME_TRAVELER",
                        12
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型"
                },
                "has_role": {
                    "type": "boolean",
                    "description": "是否拥有该身份 (默认为true)"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Role Condition",
            "description": "身份条件"
        },
        "v1.StatCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色选择器"
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "PARANOIA",
                        1,
                        "GOODWILL",
                        2,
                        "INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type"
                },
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "GREATER_THAN",
                        1,
                        "LESS_THAN",
                        2,
                        "EQUAL_TO",
                        3,
                        "GREATER_THAN_OR_EQUAL",
                        4,
                        "LESS_THAN_OR_EQUAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator"
                },
                "value": {
                    "type": "integer",
                    "description": "比较的值"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition",
            "description": "属性条件"
        },
        "v1.TargetSelector": {
            "properties": {
                "selector_type": {
                    "enum": [
                        "SELECTOR_TYPE_UNSPECIFIED",
                        0,
                        "SPECIFIC_CHARACTER",
                        1,
                        "TRIGGERING_CHARACTER",
                        2,
                        "CULPRIT",
                        3,
                        "VICTIM",
                        4,
                        "ANY_CHARACTER_WITH_ROLE",
                        5,
                        "ALL_CHARACTERS_AT_LOCATION",
                        6
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Selector Type"
                },
                "character_id": {
                    "type": "integer",
                    "description": "当类型为 SPECIFIC_CHARACTER 时使用"
                },
                "role_filter": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "PERSON",
                        1,
                        "KILLER",
                        2,
                        "BRAIN",
                        3,
                        "KEY_PERSON",
                        4,
                        "CULTIST",
                        5,
                        "FRIEND",
                        6,
                        "LOVED_ONE",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "SERIAL_KILLER",
                        9,
                        "FACTOR",
                        10,
                        "WITCH",
                        11,
                        "TIME_TRAVELER",
                        12
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型"
                },
                "location_filter": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target Selector",
            "description": "目标选择器，用于动态指定条件或效果的目标"
        },
        "v1.TraitCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "目标角色选择器"
                },
                "trait": {
                    "type": "string",
                    "description": "目标特征"
                },
                "has_trait": {
                    "type": "boolean",
                    "description": "是否拥有该特征 (默认为true)"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Trait Condition",
            "description": "特征条件"
        }
    }
}