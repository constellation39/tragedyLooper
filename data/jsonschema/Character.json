{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Character",
    "definitions": {
        "Character": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "角色唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "角色名称"
                },
                "traits": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "角色特征，例如“学生”、“记者”"
                },
                "current_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                },
                "paranoia": {
                    "type": "integer",
                    "description": "妄想值"
                },
                "goodwill": {
                    "type": "integer",
                    "description": "好感值"
                },
                "intrigue": {
                    "type": "integer",
                    "description": "阴谋值"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "INNOCENT",
                        1,
                        "KILLER",
                        2,
                        "ACCOMPLICE",
                        3,
                        "PERSON_OF_INTEREST",
                        4,
                        "KEY_PERSON",
                        5,
                        "FRIEND",
                        6,
                        "LOVER",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "CULTIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型枚举"
                },
                "abilities": {
                    "items": {
                        "$ref": "#/definitions/v1.Ability"
                    },
                    "type": "array",
                    "description": "角色拥有的能力列表"
                },
                "is_alive": {
                    "type": "boolean",
                    "description": "角色是否存活"
                },
                "in_panic_mode": {
                    "type": "boolean",
                    "description": "是否处于恐慌模式（新增字段）"
                },
                "paranoia_limit": {
                    "type": "integer",
                    "description": "妄想值上限，考虑作为剧本或游戏状态的一部分"
                },
                "goodwill_limit": {
                    "type": "integer",
                    "description": "好感值上限"
                },
                "intrigue_limit": {
                    "type": "integer",
                    "description": "阴谋值上限"
                },
                "rules": {
                    "items": {
                        "$ref": "#/definitions/v1.CharacterRule"
                    },
                    "type": "array",
                    "description": "角色特有的规则列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character",
            "description": "角色信息"
        },
        "v1.Ability": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "能力唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "能力名称"
                },
                "description": {
                    "type": "string",
                    "description": "能力描述"
                },
                "trigger_type": {
                    "enum": [
                        "TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ON_GAME_SETUP",
                        1,
                        "ON_LOOP_START",
                        2,
                        "ON_DAY_START",
                        3,
                        "ON_CARD_PLAY_PHASE",
                        4,
                        "ON_CARD_REVEAL_PHASE",
                        5,
                        "ON_CARD_RESOLVE_PHASE",
                        6,
                        "ON_ABILITY_PHASE",
                        7,
                        "ON_INCIDENT_PHASE",
                        8,
                        "ON_GAME_EVENT",
                        9,
                        "PASSIVE",
                        10,
                        "ON_LOOP_LOSS",
                        11,
                        "ON_LOOP_WIN",
                        12,
                        "ON_GAME_END",
                        13
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Trigger Type",
                    "description": "触发器类型枚举（能力或规则何时触发）"
                },
                "event_filters": {
                    "items": {
                        "enum": [
                            "GAME_EVENT_TYPE_UNSPECIFIED",
                            0,
                            "CHARACTER_MOVED",
                            1,
                            "PARANOIA_ADJUSTED",
                            2,
                            "GOODWILL_ADJUSTED",
                            3,
                            "INTRIGUE_ADJUSTED",
                            4,
                            "INCIDENT_TRIGGERED",
                            5,
                            "INCIDENT_PREVENTED",
                            6,
                            "ROLE_REVEALED",
                            7,
                            "ABILITY_GRANTED",
                            8,
                            "CHOICE_REQUIRED",
                            9,
                            "LOOP_WIN",
                            10,
                            "LOOP_LOSS",
                            11,
                            "FIRST_GUESS_MADE",
                            12,
                            "FINAL_GUESS_MADE",
                            13,
                            "GOODWILL_REFUSAL_TEST",
                            14
                        ]
                    },
                    "type": "array",
                    "title": "Game Event Type",
                    "description": "游戏事件类型枚举"
                },
                "effect": {
                    "$ref": "#/definitions/v1.Effect",
                    "additionalProperties": true,
                    "description": "能力的具体效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "是否每个循环只能使用一次"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色枚举"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态：本循环是否已使用过此能力"
                },
                "is_passive": {
                    "type": "boolean",
                    "description": "是否是被动能力（与TriggerType.PASSIVE配合使用）"
                },
                "is_mandatory": {
                    "type": "boolean",
                    "description": "是否是强制触发的能力（不需要玩家选择）"
                }
