{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Character",
    "definitions": {
        "Character": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "角色ID，关联到CharacterConfig"
                },
                "current_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "paranoia": {
                    "type": "integer",
                    "description": "当前妄想值"
                },
                "goodwill": {
                    "type": "integer",
                    "description": "当前好感值"
                },
                "intrigue": {
                    "type": "integer",
                    "description": "当前阴谋值"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "PERSON",
                        1,
                        "KILLER",
                        2,
                        "BRAIN",
                        3,
                        "KEY_PERSON",
                        4,
                        "CULTIST",
                        5,
                        "FRIEND",
                        6,
                        "LOVED_ONE",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "SERIAL_KILLER",
                        9,
                        "FACTOR",
                        10,
                        "WITCH",
                        11,
                        "TIME_TRAVELER",
                        12
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型"
                },
                "abilities": {
                    "items": {
                        "$ref": "#/definitions/v1.Ability"
                    },
                    "type": "array",
                    "description": "拥有的能力实例列表"
                },
                "is_alive": {
                    "type": "boolean",
                    "description": "是否存活"
                },
                "in_panic_mode": {
                    "type": "boolean",
                    "description": "是否处于恐慌模式"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character",
            "description": "角色运行时实例"
        },
        "v1.Ability": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "能力ID，关联到AbilityConfig"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态：本循环是否已使用"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability"
        }
    }
}