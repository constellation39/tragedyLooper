{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Character",
    "definitions": {
        "Character": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "唯一标识符"
                },
                "name": {
                    "type": "string",
                    "description": "角色名称"
                },
                "traits": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "角色特征，例如：[\"Student\", \"Journalist\"]"
                },
                "current_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "paranoia": {
                    "type": "integer",
                    "description": "妄想指数"
                },
                "goodwill": {
                    "type": "integer",
                    "description": "好感度"
                },
                "intrigue": {
                    "type": "integer",
                    "description": "阴谋标记"
                },
                "is_alive": {
                    "type": "boolean",
                    "description": "是否存活"
                },
                "abilities": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.Ability"
                    },
                    "type": "array",
                    "description": "角色能力"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "ROLE_TYPE_INNOCENT",
                        1,
                        "ROLE_TYPE_KILLER",
                        2,
                        "ROLE_TYPE_BRAIN",
                        3,
                        "ROLE_TYPE_KEY_PERSON",
                        4,
                        "ROLE_TYPE_FRIEND",
                        5,
                        "ROLE_TYPE_CONSPIRACY_THEORIST",
                        6,
                        "ROLE_TYPE_CULTIST",
                        7,
                        "ROLE_TYPE_MASTERMIND",
                        8,
                        "ROLE_TYPE_PROTAGONIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "RoleType 定义了玩家在游戏中的具体角色。"
                },
                "rules": {
                    "items": {
                        "$ref": "#/definitions/proto.v1.CharacterRule"
                    },
                    "type": "array",
                    "description": "角色的特殊规则"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character",
            "description": "Character 表示游戏中的一个角色。"
        },
        "proto.v1.Ability": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string",
                    "description": "能力名称"
                },
                "description": {
                    "type": "string",
                    "description": "能力描述"
                },
                "trigger_type": {
                    "enum": [
                        "ABILITY_TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ABILITY_TRIGGER_TYPE_DAY_START",
                        1,
                        "ABILITY_TRIGGER_TYPE_MASTERMIND_PHASE",
                        2,
                        "ABILITY_TRIGGER_TYPE_GOODWILL_PHASE",
                        3,
                        "ABILITY_TRIGGER_TYPE_PASSIVE",
                        4,
                        "ABILITY_TRIGGER_TYPE_CARD_RESOLUTION",
                        5,
                        "ABILITY_TRIGGER_TYPE_INCIDENT",
                        6,
                        "ABILITY_TRIGGER_TYPE_PLAYER_ACTION",
                        7
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Ability Trigger Type",
                    "description": "AbilityTriggerType 定义能力何时可以被触发。"
                },
                "effect": {
                    "$ref": "#/definitions/proto.v1.Effect",
                    "additionalProperties": true,
                    "description": "实际效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "每循环只能使用一次"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态，不用于配置"
                },
                "target": {
                    "$ref": "#/definitions/proto.v1.Target",
                    "additionalProperties": true
                },
                "cost": {
                    "type": "integer",
                    "description": "Cost in goodwill to use the ability"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability",
            "description": "Ability 定义角色的特殊技能。"
        },
        "proto.v1.AdjustGoodwillEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "AdjustGoodwillEffect 调整角色的好感度。"
        },
        "proto.v1.AdjustIntrigueEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "AdjustIntrigueEffect 调整角色的阴谋值。"
        },
        "proto.v1.AdjustParanoiaEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "AdjustParanoiaEffect 调整角色的妄想值。"
        },
        "proto.v1.CharacterRule": {
            "properties": {
                "trigger": {
                    "enum": [
                        "RULE_TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ON_GAME_SETUP",
                        1,
                        "ON_LOOP_START",
                        2,
                        "LOCATION_RESOLUTION",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Rule Trigger Type",
                    "description": "RuleTriggerType 定义规则何时被评估。"
                },
                "description": {
                    "type": "string"
                },
                "turf_selection": {
                    "$ref": "#/definitions/proto.v1.TurfSelectionEffect",
                    "additionalProperties": true
                },
                "delayed_entry": {
                    "$ref": "#/definitions/proto.v1.DelayedEntryEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Rule",
            "description": "CharacterRule 定义角色的特殊规则。"
        },
        "proto.v1.DelayedEntryEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Delayed Entry Effect",
            "description": "DelayedEntryEffect 表示角色延迟登场。"
        },
        "proto.v1.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/proto.v1.MoveCharacterEffect",
                    "additionalProperties": true
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustParanoiaEffect",
                    "additionalProperties": true
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustGoodwillEffect",
                    "additionalProperties": true
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustIntrigueEffect",
                    "additionalProperties": true
                },
                "forbid_movement_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidMovementEffect",
                    "additionalProperties": true
                },
                "forbid_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidParanoiaEffect",
                    "additionalProperties": true
                },
                "forbid_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidGoodwillEffect",
                    "additionalProperties": true
                },
                "forbid_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.ForbidIntrigueEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "Effect 接口定义了一个效果的核心行为。"
        },
        "proto.v1.ForbidGoodwillEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Goodwill Effect",
            "description": "ForbidGoodwillEffect 禁止好感度增加。"
        },
        "proto.v1.ForbidIntrigueEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Intrigue Effect",
            "description": "ForbidIntrigueEffect 禁止阴谋值增加。"
        },
        "proto.v1.ForbidMovementEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Movement Effect",
            "description": "ForbidMovementEffect 禁止角色移动。"
        },
        "proto.v1.ForbidParanoiaEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Paranoia Effect",
            "description": "ForbidParanoiaEffect 禁止妄想值增加。"
        },
        "proto.v1.MoveCharacterEffect": {
            "properties": {
                "destination": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "MoveCharacterEffect 移动一个角色到指定地点。"
        },
        "proto.v1.Target": {
            "properties": {
                "character_id": {
                    "type": "integer"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target"
        },
        "proto.v1.TurfSelectionEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Turf Selection Effect",
            "description": "TurfSelectionEffect 表示需要为 Boss 选择地盘。"
        }
    }
}