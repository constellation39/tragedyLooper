            "description": "禁止妄想值调整效果"
        },
        "v1.ForceGoodwillRefusalTestEffect": {
            "properties": {
                "protagonist_player_id": {
                    "type": "string",
                    "description": "哪个主角玩家触发了测试"
                },
                "character_id": {
                    "type": "integer",
                    "description": "哪个角色的好感度能力被拒绝"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Force Goodwill Refusal Test Effect",
            "description": "强制进行好感度拒绝测试效果"
        },
        "v1.GrantAbilityEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "ability_id": {
                    "type": "integer",
                    "description": "授予的能力ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Grant Ability Effect",
            "description": "授予角色能力效果"
        },
        "v1.MoveCharacterEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
