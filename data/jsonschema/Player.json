                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/v1.AdjustIntrigueEffect",
                    "additionalProperties": true,
                    "description": "调整阴谋值效果"
                },
                "forbid_movement_effect": {
                    "$ref": "#/definitions/v1.ForbidMovementEffect",
                    "additionalProperties": true,
                    "description": "禁止移动效果"
                },
                "forbid_paranoia_effect": {
                    "$ref": "#/definitions/v1.ForbidParanoiaEffect",
                    "additionalProperties": true,
                    "description": "禁止妄想值调整效果"
                },
                "forbid_goodwill_effect": {
                    "$ref": "#/definitions/v1.ForbidGoodwillEffect",
                    "additionalProperties": true,
                    "description": "禁止好感值调整效果"
                },
                "forbid_intrigue_effect": {
                    "$ref": "#/definitions/v1.ForbidIntrigueEffect",
                    "additionalProperties": true,
                    "description": "禁止阴谋值调整效果"
                },
                "reveal_role_effect": {
                    "$ref": "#/definitions/v1.RevealRoleEffect",
                    "additionalProperties": true,
                    "description": "揭示角色身份效果（新增）"
                },
                "grant_ability_effect": {
                    "$ref": "#/definitions/v1.GrantAbilityEffect",
                    "additionalProperties": true,
                    "description": "授予角色能力效果（新增）"
                },
                "cancel_incident_effect": {
                    "$ref": "#/definitions/v1.CancelIncidentEffect",
                    "additionalProperties": true,
                    "description": "取消悲剧事件效果（新增）"
                },
                "force_goodwill_refusal_test": {
                    "$ref": "#/definitions/v1.ForceGoodwillRefusalTestEffect",
                    "additionalProperties": true,
                    "description": "强制进行好感度拒绝测试效果（新增）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "效果的通用消息，使用 oneof 包含各种具体效果"
        },
        "v1.ForbidGoodwillEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Goodwill Effect",
            "description": "禁止好感值调整效果"
        },
        "v1.ForbidIntrigueEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Intrigue Effect",
            "description": "禁止阴谋值调整效果"
        },
        "v1.ForbidMovementEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID（如果为空则影响所有角色）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Movement Effect",
            "description": "禁止移动效果"
        },
        "v1.ForbidParanoiaEffect": {
            "properties": {
