{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Player",
    "definitions": {
        "Player": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "玩家唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "玩家名称"
                },
                "role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色枚举"
                },
                "is_llm": {
                    "type": "boolean",
                    "description": "是否由LLM（大语言模型）控制"
                },
                "hand": {
                    "items": {
                        "$ref": "#/definitions/v1.Card"
                    },
                    "type": "array",
                    "description": "玩家手牌列表"
                },
                "llm_session_id": {
                    "type": "string",
                    "description": "如果是LLM，对应的会话ID"
                },
                "deduction_knowledge": {
                    "$ref": "#/definitions/v1.PlayerDeductionKnowledge",
                    "additionalProperties": true,
                    "description": "主角的推理知识（仅主角玩家拥有）"
                },
                "protagonist_characters_controlled": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "新增：如果主角玩家可以控制多个主角角色牌组，列出其控制的角色ID列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player",
            "description": "玩家信息"
        },
        "v1.AdjustGoodwillEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "调整好感值效果"
        },
        "v1.AdjustIntrigueEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "调整阴谋值效果"
        },
        "v1.AdjustParanoiaEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "调整妄想值效果"
        },
        "v1.CancelIncidentEffect": {
            "properties": {
                "incident_type": {
                    "enum": [
                        "INCIDENT_TYPE_UNSPECIFIED",
                        0,
                        "MURDER",
                        1,
                        "SUICIDE",
                        2,
                        "HOSPITAL_CONSPIRACY",
                        3,
                        "MURDER_MYSTERY",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Incident Type",
                    "description": "悲剧类型枚举"
                },
                "incident_day": {
                    "type": "integer",
                    "description": "要取消的悲剧发生在哪一天"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Cancel Incident Effect",
            "description": "取消悲剧事件效果"
        },
        "v1.Card": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "卡牌唯一ID"
                },
                "name": {
                    "type": "string",
                    "description": "卡牌名称"
                },
                "card_type": {
                    "enum": [
                        "CARD_TYPE_UNSPECIFIED",
                        0,
                        "MOVEMENT",
                        1,
                        "PARANOIA",
                        2,
                        "GOODWILL",
                        3,
                        "INTRIGUE",
                        4,
                        "SPECIAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Card Type",
                    "description": "卡牌类型枚举"
                },
                "owner_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色枚举"
                },
                "effect": {
                    "$ref": "#/definitions/v1.Effect",
                    "additionalProperties": true,
                    "description": "卡牌的具体效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "是否每个循环只能使用一次"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态：本循环是否已使用过此卡牌"
                },
                "target_character_id": {
                    "type": "integer",
                    "description": "卡牌的目标角色ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card",
            "description": "行动卡牌"
        },
        "v1.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/v1.MoveCharacterEffect",
                    "additionalProperties": true,
                    "description": "移动角色效果"
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/v1.AdjustParanoiaEffect",
                    "additionalProperties": true,
                    "description": "调整妄想值效果"
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/v1.AdjustGoodwillEffect",
                    "additionalProperties": true,
