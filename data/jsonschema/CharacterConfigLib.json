{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/CharacterConfigLib",
    "definitions": {
        "CharacterConfigLib": {
            "properties": {
                "characters": {
                    "additionalProperties": {
                        "$ref": "#/definitions/v1.CharacterConfig",
                        "additionalProperties": true
                    },
                    "type": "object"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config Lib",
            "description": "CharacterConfigLib holds a library of script-specific character configurations."
        },
        "v1.CharacterConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Character ID"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "INNOCENT",
                        1,
                        "KILLER",
                        2,
                        "ACCOMPLICE",
                        3,
                        "PERSON_OF_INTEREST",
                        4,
                        "KEY_PERSON",
                        5,
                        "FRIEND",
                        6,
                        "LOVER",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "CULTIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型枚举"
                },
                "initial_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                },
                "initial_paranoia": {
                    "type": "integer",
                    "description": "Initial paranoia"
                },
                "initial_goodwill": {
                    "type": "integer",
                    "description": "Initial goodwill"
                },
                "initial_intrigue": {
                    "type": "integer",
                    "description": "Initial intrigue"
                },
                "initial_ability_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "List of initial ability IDs"
                },
                "is_first_step_role": {
                    "type": "boolean",
                    "description": "Whether this is a First Step role for this script"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config",
            "description": "CharacterConfig defines a character's initial setup for a specific script."
        }
    }
}