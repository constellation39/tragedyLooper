{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/CharacterConfigLib",
    "definitions": {
        "CharacterConfigLib": {
            "properties": {
                "characters": {
                    "additionalProperties": {
                        "$ref": "#/definitions/v1.CharacterConfig",
                        "additionalProperties": true
                    },
                    "type": "object"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config Lib"
        },
        "v1.CharacterConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "角色ID"
                },
                "hidden_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "INNOCENT",
                        1,
                        "KILLER",
                        2,
                        "ACCOMPLICE",
                        3,
                        "PERSON_OF_INTEREST",
                        4,
                        "KEY_PERSON",
                        5,
                        "FRIEND",
                        6,
                        "LOVER",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "CULTIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型枚举"
                },
                "initial_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                },
                "initial_paranoia": {
                    "type": "integer",
                    "description": "角色初始妄想值"
                },
                "initial_goodwill": {
                    "type": "integer",
                    "description": "角色初始好感值"
                },
                "initial_intrigue": {
                    "type": "integer",
                    "description": "角色初始阴谋值"
                },
                "initial_ability_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "角色初始拥有的能力ID列表"
                },
                "is_first_step_role": {
                    "type": "boolean",
                    "description": "是否为First Step身份（新版中此概念用于特定剧本）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character Config",
            "description": "角色在剧本中的配置"
        }
    }
}