{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Card",
    "definitions": {
        "Card": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "唯一标识符"
                },
                "name": {
                    "type": "string",
                    "description": "卡牌名称"
                },
                "card_type": {
                    "enum": [
                        "CARD_TYPE_UNSPECIFIED",
                        0,
                        "CARD_TYPE_MOVEMENT",
                        1,
                        "CARD_TYPE_PARANOIA",
                        2,
                        "CARD_TYPE_GOODWILL",
                        3,
                        "CARD_TYPE_INTRIGUE",
                        4,
                        "CARD_TYPE_SPECIAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Card Type",
                    "description": "CardType 定义玩家可以打出的卡牌类型。"
                },
                "owner_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "effect": {
                    "$ref": "#/definitions/proto.v1.Effect",
                    "additionalProperties": true,
                    "description": "卡牌效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "每循环只能使用一次"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态"
                },
                "target": {
                    "$ref": "#/definitions/proto.v1.Target",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card 表示一张行动卡。",
            "description": "Card 表示一张行动卡。  Card 表示一张行动卡。"
        },
        "proto.v1.AdjustGoodwillEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "AdjustGoodwillEffect 调整角色的好感度。"
        },
        "proto.v1.AdjustIntrigueEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "AdjustIntrigueEffect 调整角色的阴谋值。"
        },
        "proto.v1.AdjustParanoiaEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "AdjustParanoiaEffect 调整角色的妄想值。"
        },
        "proto.v1.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/proto.v1.MoveCharacterEffect",
                    "additionalProperties": true
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustParanoiaEffect",
                    "additionalProperties": true
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustGoodwillEffect",
                    "additionalProperties": true
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/proto.v1.AdjustIntrigueEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "Effect 接口定义了一个效果的核心行为。"
        },
        "proto.v1.MoveCharacterEffect": {
            "properties": {
                "destination": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "MoveCharacterEffect 移动一个角色到指定地点。"
        },
        "proto.v1.Target": {
            "properties": {
                "character_id": {
                    "type": "integer"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target"
        }
    }
}