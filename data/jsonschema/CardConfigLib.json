        "v1.CardConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Unique ID for the card configuration"
                },
                "name": {
                    "type": "string",
                    "description": "Name of the card"
                },
                "card_type": {
                    "enum": [
                        "CARD_TYPE_UNSPECIFIED",
                        0,
                        "MOVEMENT",
                        1,
                        "PARANOIA",
                        2,
                        "GOODWILL",
                        3,
                        "INTRIGUE",
                        4,
                        "SPECIAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
