{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/CardPlayedEvent",
    "definitions": {
        "CardPlayedEvent": {
            "properties": {
                "played_cards": {
                    "additionalProperties": {
                        "$ref": "#/definitions/v1.CardList",
                        "additionalProperties": true
                    },
                    "type": "object",
                    "description": "key为玩家ID，value为该玩家打出的卡牌列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card Played Event",
            "description": "卡牌打出事件"
        },
        "v1.Card": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "卡牌ID，关联到CardConfig"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态：本循环是否已使用"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card",
            "description": "卡牌运行时实例"
        },
        "v1.CardList": {
            "properties": {
                "cards": {
                    "items": {
                        "$ref": "#/definitions/v1.Card"
                    },
                    "type": "array",
                    "description": "卡牌实例列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card List",
            "description": "卡牌列表"
        }
    }
}