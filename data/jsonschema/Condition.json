{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Condition",
    "definitions": {
        "Condition": {
            "properties": {
                "character_id": {
                    "type": "string"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "min_paranoia": {
                    "type": "integer"
                },
                "is_alone": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Condition",
            "description": "Condition 定义悲剧的一个单一条件。"
        }
    }
}