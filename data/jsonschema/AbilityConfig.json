{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/AbilityConfig",
    "definitions": {
        "AbilityConfig": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Unique ID for the ability configuration"
                },
                "name": {
                    "type": "string",
                    "description": "Name of the ability"
                },
                "description": {
                    "type": "string",
                    "description": "Description of the ability"
                },
                "trigger_type": {
                    "enum": [
                        "TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ON_GAME_SETUP",
                        1,
                        "ON_LOOP_START",
                        2,
                        "ON_DAY_START",
                        3,
                        "ON_CARD_PLAY_PHASE",
                        4,
                        "ON_CARD_REVEAL_PHASE",
                        5,
                        "ON_CARD_RESOLVE_PHASE",
                        6,
                        "ON_ABILITY_PHASE",
                        7,
                        "ON_INCIDENT_PHASE",
                        8,
                        "ON_GAME_EVENT",
                        9,
                        "PASSIVE",
                        10,
                        "ON_LOOP_LOSS",
                        11,
                        "ON_LOOP_WIN",
                        12,
                        "ON_GAME_END",
                        13
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Trigger Type",
                    "description": "触发器类型枚举（能力或规则何时触发）"
                },
                "event_filters": {
                    "items": {
                        "enum": [
                            "GAME_EVENT_TYPE_UNSPECIFIED",
                            0,
                            "CHARACTER_MOVED",
                            1,
                            "PARANOIA_ADJUSTED",
                            2,
                            "GOODWILL_ADJUSTED",
                            3,
                            "INTRIGUE_ADJUSTED",
                            4,
                            "INCIDENT_TRIGGERED",
                            5,
                            "INCIDENT_PREVENTED",
                            6,
                            "ROLE_REVEALED",
                            7,
                            "ABILITY_GRANTED",
                            8,
                            "CHOICE_REQUIRED",
                            9,
                            "LOOP_WIN",
                            10,
                            "LOOP_LOSS",
                            11,
                            "FIRST_GUESS_MADE",
                            12,
                            "FINAL_GUESS_MADE",
                            13,
                            "GOODWILL_REFUSAL_TEST",
                            14,
                            "LOOP_OVER",
                            15,
                            "DAY_ADVANCED",
                            16,
                            "TRAGEDY_TRIGGERED",
                            17,
                            "LOOP_RESET",
                            18
                        ]
                    },
                    "type": "array",
                    "title": "Game Event Type",
                    "description": "游戏事件类型枚举"
                },
                "effect": {
                    "$ref": "#/definitions/v1.Effect",
                    "additionalProperties": true,
                    "description": "The effect of the ability"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "Whether the ability can be used only once per loop"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "MASTERMIND",
                        1,
                        "PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色枚举"
                },
                "is_passive": {
                    "type": "boolean",
                    "description": "Whether this is a passive ability"
                },
                "is_mandatory": {
                    "type": "boolean",
                    "description": "Whether this ability is mandatory"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability Config",
            "description": "AbilityConfig represents the static configuration of an ability."
        },
        "v1.AdjustGoodwillEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "调整好感值效果"
        },
        "v1.AdjustIntrigueEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "调整阴谋值效果"
        },
        "v1.AdjustParanoiaEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量（正数增加，负数减少）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "调整妄想值效果"
        },
        "v1.CancelIncidentEffect": {
            "properties": {
                "incident_type": {
                    "enum": [
                        "INCIDENT_TYPE_UNSPECIFIED",
                        0,
                        "MURDER",
                        1,
                        "SUICIDE",
                        2,
                        "HOSPITAL_CONSPIRACY",
                        3,
                        "MURDER_MYSTERY",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Incident Type",
                    "description": "悲剧类型枚举"
                },
                "incident_day": {
                    "type": "integer",
                    "description": "要取消的悲剧发生在哪一天"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Cancel Incident Effect",
            "description": "取消悲剧事件效果"
        },
        "v1.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/v1.MoveCharacterEffect",
                    "additionalProperties": true,
                    "description": "移动角色效果"
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/v1.AdjustParanoiaEffect",
                    "additionalProperties": true,
                    "description": "调整妄想值效果"
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/v1.AdjustGoodwillEffect",
                    "additionalProperties": true,
                    "description": "调整好感值效果"
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/v1.AdjustIntrigueEffect",
                    "additionalProperties": true,
                    "description": "调整阴谋值效果"
                },
                "forbid_movement_effect": {
                    "$ref": "#/definitions/v1.ForbidMovementEffect",
                    "additionalProperties": true,
                    "description": "禁止移动效果"
                },
                "forbid_paranoia_effect": {
                    "$ref": "#/definitions/v1.ForbidParanoiaEffect",
                    "additionalProperties": true,
                    "description": "禁止妄想值调整效果"
                },
                "forbid_goodwill_effect": {
                    "$ref": "#/definitions/v1.ForbidGoodwillEffect",
                    "additionalProperties": true,
                    "description": "禁止好感值调整效果"
                },
                "forbid_intrigue_effect": {
                    "$ref": "#/definitions/v1.ForbidIntrigueEffect",
                    "additionalProperties": true,
                    "description": "禁止阴谋值调整效果"
                },
                "reveal_role_effect": {
                    "$ref": "#/definitions/v1.RevealRoleEffect",
                    "additionalProperties": true,
                    "description": "揭示角色身份效果（新增）"
                },
                "grant_ability_effect": {
                    "$ref": "#/definitions/v1.GrantAbilityEffect",
                    "additionalProperties": true,
                    "description": "授予角色能力效果（新增）"
                },
                "cancel_incident_effect": {
                    "$ref": "#/definitions/v1.CancelIncidentEffect",
                    "additionalProperties": true,
                    "description": "取消悲剧事件效果（新增）"
                },
                "force_goodwill_refusal_test": {
                    "$ref": "#/definitions/v1.ForceGoodwillRefusalTestEffect",
                    "additionalProperties": true,
                    "description": "强制进行好感度拒绝测试效果（新增）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "效果的通用消息，使用 oneof 包含各种具体效果"
        },
        "v1.ForbidGoodwillEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Goodwill Effect",
            "description": "禁止好感值调整效果"
        },
        "v1.ForbidIntrigueEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Intrigue Effect",
            "description": "禁止阴谋值调整效果"
        },
        "v1.ForbidMovementEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID（如果为空则影响所有角色）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Movement Effect",
            "description": "禁止移动效果"
        },
        "v1.ForbidParanoiaEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Forbid Paranoia Effect",
            "description": "禁止妄想值调整效果"
        },
        "v1.ForceGoodwillRefusalTestEffect": {
            "properties": {
                "protagonist_player_id": {
                    "type": "string",
                    "description": "哪个主角玩家触发了测试"
                },
                "character_id": {
                    "type": "integer",
                    "description": "哪个角色的好感度能力被拒绝"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Force Goodwill Refusal Test Effect",
            "description": "强制进行好感度拒绝测试效果"
        },
        "v1.GrantAbilityEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "ability_id": {
                    "type": "integer",
                    "description": "授予的能力ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Grant Ability Effect",
            "description": "授予角色能力效果"
        },
        "v1.MoveCharacterEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "HOSPITAL",
                        1,
                        "SHRINE",
                        2,
                        "CITY",
                        3,
                        "SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型枚举"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "移动角色效果"
        },
        "v1.RevealRoleEffect": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "目标角色ID"
                },
                "revealed_role": {
                    "enum": [
                        "ROLE_TYPE_UNSPECIFIED",
                        0,
                        "INNOCENT",
                        1,
                        "KILLER",
                        2,
                        "ACCOMPLICE",
                        3,
                        "PERSON_OF_INTEREST",
                        4,
                        "KEY_PERSON",
                        5,
                        "FRIEND",
                        6,
                        "LOVER",
                        7,
                        "CONSPIRACY_THEORIST",
                        8,
                        "CULTIST",
                        9
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Role Type",
                    "description": "角色身份类型枚举"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Reveal Role Effect",
