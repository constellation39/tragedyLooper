{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/ScriptModel",
    "definitions": {
        "ScriptModel": {
            "properties": {
                "private_info": {
                    "$ref": "#/definitions/tragedylooper.v1.PrivateInfo",
                    "additionalProperties": true,
                    "description": "Private information for the script."
                },
                "public_info": {
                    "$ref": "#/definitions/tragedylooper.v1.PublicInfo",
                    "additionalProperties": true,
                    "description": "Public information for the script."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Script Model",
            "description": "ScriptConfig defines the configuration for a specific script."
        },
        "tragedylooper.v1.PrivateInfo": {
            "properties": {
                "main_plot_id": {
                    "type": "integer",
                    "description": "The main plot of the script."
                },
                "sub_plots_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "A list of sub plots for the script."
                },
                "characters_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "A map of characters in the script."
                },
                "incident_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "A map of incidents in the script."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Private Info",
            "description": "PrivateInfo defines the private information for a script."
        },
        "tragedylooper.v1.PublicInfo": {
            "properties": {
                "script_config_id": {
                    "type": "integer",
                    "description": "The unique identifier for the script configuration."
                },
                "loop_count": {
                    "type": "integer",
                    "description": "Game rules. The number of loops in the game."
                },
                "days_per_loop": {
                    "type": "integer",
                    "description": "The number of days per loop."
                },
                "can_discuss": {
                    "type": "boolean",
                    "description": "Whether players can discuss information."
                },
                "special_incident_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "Special rules. A map of special incidents."
                },
                "scheduled_incident_ids": {
                    "items": {
                        "type": "integer"
                    },
                    "type": "array",
                    "description": "A map of scheduled incidents."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Public Info",
            "description": "PublicInfo defines the public information for a script."
        }
    }
}