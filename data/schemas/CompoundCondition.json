{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/CompoundCondition",
    "definitions": {
        "CompoundCondition": {
            "properties": {
                "operator": {
                    "enum": [
                        "OPERATOR_UNSPECIFIED",
                        0,
                        "OPERATOR_AND",
                        1,
                        "OPERATOR_OR",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Operator",
                    "description": "The operator to use when combining conditions."
                },
                "sub_conditions": {
                    "items": {
                        "$ref": "#/definitions/tragedylooper.v1.Condition"
                    },
                    "type": "array",
                    "description": "A list of sub-conditions."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Compound Condition",
            "description": "CompoundCondition defines a combination of multiple conditions."
        },
        "tragedylooper.v1.Condition": {
            "properties": {
                "negated": {
                    "type": "boolean",
                    "description": "Whether this condition is negated."
                },
                "stat_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.StatCondition",
                    "additionalProperties": true,
                    "description": "A stat condition."
                },
                "location_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.LocationCondition",
                    "additionalProperties": true,
                    "description": "A location condition."
                },
                "role_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.RoleCondition",
                    "additionalProperties": true,
                    "description": "A role condition."
                },
                "trait_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.TraitCondition",
                    "additionalProperties": true,
                    "description": "A trait condition."
                },
                "day_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.DayCondition",
                    "additionalProperties": true,
                    "description": "A day condition."
                },
                "player_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.PlayerCondition",
                    "additionalProperties": true,
                    "description": "A player condition."
                },
                "compound_condition": {
                    "$ref": "#/definitions/CompoundCondition",
                    "additionalProperties": true,
                    "description": "A compound condition (AND/OR/NOT)."
                },
                "phase_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.PhaseCondition",
                    "additionalProperties": true,
                    "description": "A phase condition."
                },
                "event_history_condition": {
                    "$ref": "#/definitions/tragedylooper.v1.EventHistoryCondition",
                    "additionalProperties": true,
                    "description": "An event history condition."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Condition",
            "description": "Condition defines a condition for triggering rules, events, and effects."
        },
        "tragedylooper.v1.DayCondition": {
            "properties": {
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "COMPARATOR_BEFORE",
                        1,
                        "COMPARATOR_ON",
                        2,
                        "COMPARATOR_AFTER",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "The comparator to use."
                },
                "day": {
                    "type": "integer",
                    "description": "The target day."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Day Condition",
            "description": "DayCondition defines a condition based on the current day."
        },
        "tragedylooper.v1.Empty": {
            "additionalProperties": true,
            "type": "object",
            "title": "Empty",
            "description": "Empty is a placeholder for messages that have no data."
        },
        "tragedylooper.v1.EventHistoryCondition": {
            "properties": {
                "event_type": {
                    "enum": [
                        "GAME_EVENT_TYPE_UNSPECIFIED",
                        0,
                        "GAME_EVENT_TYPE_CHARACTER_MOVED",
                        1,
                        "GAME_EVENT_TYPE_PARANOIA_ADJUSTED",
                        2,
                        "GAME_EVENT_TYPE_GOODWILL_ADJUSTED",
                        3,
                        "GAME_EVENT_TYPE_INTRIGUE_ADJUSTED",
                        4,
                        "GAME_EVENT_TYPE_INCIDENT_TRIGGERED",
                        5,
                        "GAME_EVENT_TYPE_INCIDENT_PREVENTED",
                        6,
                        "GAME_EVENT_TYPE_ROLE_REVEALED",
                        7,
                        "GAME_EVENT_TYPE_ABILITY_GRANTED",
                        8,
                        "GAME_EVENT_TYPE_CHOICE_REQUIRED",
                        9,
                        "GAME_EVENT_TYPE_LOOP_WIN",
                        10,
                        "GAME_EVENT_TYPE_LOOP_LOSS",
                        11,
                        "GAME_EVENT_TYPE_FIRST_GUESS_MADE",
                        12,
                        "GAME_EVENT_TYPE_FINAL_GUESS_MADE",
                        13,
                        "GAME_EVENT_TYPE_GOODWILL_REFUSAL_TEST",
                        14,
                        "GAME_EVENT_TYPE_LOOP_OVER",
                        15,
                        "GAME_EVENT_TYPE_DAY_ADVANCED",
                        16,
                        "GAME_EVENT_TYPE_TRAGEDY_TRIGGERED",
                        17,
                        "GAME_EVENT_TYPE_LOOP_RESET",
                        18,
                        "GAME_EVENT_TYPE_TRAIT_ADDED",
                        19,
                        "GAME_EVENT_TYPE_TRAIT_REMOVED",
                        20,
                        "GAME_EVENT_TYPE_CARD_PLAYED",
                        21,
                        "GAME_EVENT_TYPE_CARD_REVEALED",
                        22,
                        "GAME_EVENT_TYPE_GAME_ENDED",
                        23,
                        "GAME_EVENT_TYPE_PLAYER_ACTION",
                        24
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Game Event Type",
                    "description": "游戏事件类型（用于能力触发器过滤）"
                },
                "lookback_days": {
                    "type": "integer",
                    "description": "How many days into the past to look. 0 means today, 1 means today and yesterday, etc."
                },
                "event_target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "Optional: Further filter by the character involved in the event."
                },
                "count": {
                    "type": "integer",
                    "description": "The number of times the event must have occurred."
                },
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "EQUAL_TO",
                        1,
                        "GREATER_THAN_OR_EQUAL_TO",
                        2,
                        "LESS_THAN_OR_EQUAL_TO",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "The comparator for the count."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Event History Condition",
            "description": "EventHistoryCondition defines a condition based on past game events."
        },
        "tragedylooper.v1.LocationCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "The target character selector."
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "state": {
                    "enum": [
                        "LOCATION_STATE_UNSPECIFIED",
                        0,
                        "IS_AT",
                        1,
                        "IS_NOT_AT",
                        2,
                        "IS_ALONE_AT",
                        3,
                        "IS_NOT_ALONE_AT",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location State",
                    "description": "The state to check for the character at the location."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition",
            "description": "LocationCondition defines a condition based on a character's location."
        },
        "tragedylooper.v1.PhaseCondition": {
            "properties": {
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "COMPARATOR_IS",
                        1,
                        "COMPARATOR_IS_NOT",
                        2,
                        "COMPARATOR_BEFORE",
                        3,
                        "COMPARATOR_AFTER",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "The comparator to use."
                },
                "phase": {
                    "enum": [
                        "GAME_PHASE_UNSPECIFIED",
                        0,
                        "GAME_PHASE_SETUP",
                        1,
                        "GAME_PHASE_MASTERMIND_SETUP",
                        2,
                        "GAME_PHASE_LOOP_START",
                        3,
                        "GAME_PHASE_DAY_START",
                        4,
                        "GAME_PHASE_MASTERMIND_CARD_PLAY",
                        5,
                        "GAME_PHASE_PROTAGONIST_CARD_PLAY",
                        6,
                        "GAME_PHASE_CARD_REVEAL",
                        7,
                        "GAME_PHASE_CARD_RESOLVE",
                        8,
                        "GAME_PHASE_MASTERMIND_ABILITIES",
                        9,
                        "GAME_PHASE_PROTAGONIST_ABILITIES",
                        10,
                        "GAME_PHASE_INCIDENTS",
                        11,
                        "GAME_PHASE_DAY_END",
                        12,
                        "GAME_PHASE_LOOP_END",
                        13,
                        "GAME_PHASE_PROTAGONIST_GUESS",
                        14,
                        "GAME_PHASE_GAME_OVER",
                        15
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Game Phase",
                    "description": "游戏阶段"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Phase Condition",
            "description": "PhaseCondition defines a condition based on the current game phase."
        },
        "tragedylooper.v1.PlayerCondition": {
            "properties": {
                "player_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_UNKNOWN",
                        1,
                        "PLAYER_ROLE_MASTERMIND",
                        2,
                        "PLAYER_ROLE_PROTAGONIST",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player Condition",
            "description": "PlayerCondition defines a condition based on a player's state."
        },
        "tragedylooper.v1.RoleCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "The target character selector."
                },
                "role_id": {
                    "type": "integer",
                    "description": "The role to check."
                },
                "has_role": {
                    "type": "boolean",
                    "description": "Whether the character has the role (defaults to true)."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Role Condition",
            "description": "RoleCondition defines a condition based on a character's role."
        },
        "tragedylooper.v1.StatCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "The target character selector."
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "STAT_TYPE_PARANOIA",
                        1,
                        "STAT_TYPE_GOODWILL",
                        2,
                        "STAT_TYPE_INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type",
                    "description": "StatType defines the type of character stat."
                },
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "COMPARATOR_GREATER_THAN",
                        1,
                        "COMPARATOR_LESS_THAN",
                        2,
                        "COMPARATOR_EQUAL_TO",
                        3,
                        "COMPARATOR_GREATER_THAN_OR_EQUAL",
                        4,
                        "COMPARATOR_LESS_THAN_OR_EQUAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "The comparator to use."
                },
                "value": {
                    "type": "integer",
                    "description": "The value to compare against."
                },
                "target_to_compare": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "Optional: A second target to compare against. If set, the condition compares the stat of 'target' with the stat of 'target_to_compare'."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition",
            "description": "StatCondition defines a condition based on a character's stats."
        },
        "tragedylooper.v1.TargetSelector": {
            "properties": {
                "specific_character": {
                    "type": "integer",
                    "description": "A specific character by ID."
                },
                "triggering_character": {
                    "$ref": "#/definitions/tragedylooper.v1.Empty",
                    "additionalProperties": true,
                    "description": "The character that triggered the event."
                },
                "culprit": {
                    "$ref": "#/definitions/tragedylooper.v1.Empty",
                    "additionalProperties": true,
                    "description": "The culprit of the event."
                },
                "victim": {
                    "$ref": "#/definitions/tragedylooper.v1.Empty",
                    "additionalProperties": true,
                    "description": "The victim of the event."
                },
                "character_with_role_id": {
                    "type": "integer",
                    "description": "Any character with a specific role."
                },
                "all_characters_at_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "action_user": {
                    "$ref": "#/definitions/tragedylooper.v1.Empty",
                    "additionalProperties": true,
                    "description": "The user of the action (card or ability)."
                },
                "action_target": {
                    "$ref": "#/definitions/tragedylooper.v1.Empty",
                    "additionalProperties": true,
                    "description": "The target of the action (card or ability)."
                },
                "all_characters": {
                    "$ref": "#/definitions/tragedylooper.v1.Empty",
                    "additionalProperties": true,
                    "description": "All characters."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target Selector",
            "description": "TargetSelector defines a dynamic target for conditions or effects. It uses a oneof to ensure that only one type of selector can be set at a time."
        },
        "tragedylooper.v1.TraitCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "The target character selector."
                },
                "trait": {
                    "type": "string",
                    "description": "The target trait."
                },
                "has_trait": {
                    "type": "boolean",
                    "description": "Whether the character has the trait (defaults to true)."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Trait Condition",
            "description": "TraitCondition defines a condition based on a character's traits."
        }
    }
}