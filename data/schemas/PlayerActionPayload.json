{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/PlayerActionPayload",
    "definitions": {
        "PlayerActionPayload": {
            "properties": {
                "play_card": {
                    "$ref": "#/definitions/tragedylooper.v1.PlayCardPayload",
                    "additionalProperties": true,
                    "description": "打出卡牌的负载"
                },
                "use_ability": {
                    "$ref": "#/definitions/tragedylooper.v1.UseAbilityPayload",
                    "additionalProperties": true,
                    "description": "使用能力的负载"
                },
                "make_guess": {
                    "$ref": "#/definitions/tragedylooper.v1.MakeGuessPayload",
                    "additionalProperties": true,
                    "description": "进行猜测的负载"
                },
                "choose_option": {
                    "$ref": "#/definitions/tragedylooper.v1.ChooseOptionPayload",
                    "additionalProperties": true,
                    "description": "进行选择的负载"
                },
                "pass_turn": {
                    "$ref": "#/definitions/tragedylooper.v1.PassTurnAction",
                    "additionalProperties": true,
                    "description": "玩家跳过"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player Action Payload",
            "description": "通用的玩家操作负载"
        },
        "tragedylooper.v1.ChooseOptionPayload": {
            "properties": {
                "player_id": {
                    "type": "integer",
                    "description": "执行操作的玩家ID"
                },
                "character_id": {
                    "type": "integer",
                    "description": "做出选择的角色（如果选择与角色相关）"
                },
                "chosen_option_id": {
                    "type": "string",
                    "description": "选择项的ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Choose Option Payload",
            "description": "玩家进行选择的操作负载（例如，在需要选择地盘或目标时）"
        },
        "tragedylooper.v1.MakeGuessPayload": {
            "properties": {
                "player_id": {
                    "type": "integer",
                    "description": "执行操作的玩家ID"
                },
                "guessed_roles": {
                    "additionalProperties": {
                        "type": "integer"
                    },
                    "type": "object",
                    "description": "猜测的角色身份映射，键为 character_id"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Make Guess Payload",
            "description": "主角玩家进行猜测的操作负载"
        },
        "tragedylooper.v1.PassTurnAction": {
            "properties": {
                "player_id": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Pass Turn Action",
            "description": "玩家跳过回合的操作负载"
        },
        "tragedylooper.v1.PlayCardPayload": {
            "properties": {
                "player_id": {
                    "type": "integer",
                    "description": "执行操作的玩家ID"
                },
                "card_id": {
                    "type": "integer",
                    "description": "打出的卡牌ID"
                },
                "target_character_id": {
                    "type": "integer",
                    "description": "卡牌的目标角色ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Play Card Payload",
            "description": "玩家打出卡牌的操作负载"
        },
        "tragedylooper.v1.UseAbilityPayload": {
            "properties": {
                "player_id": {
                    "type": "integer",
                    "description": "执行操作的玩家ID"
                },
                "character_id": {
                    "type": "integer",
                    "description": "哪个角色的能力被使用"
                },
                "ability_id": {
                    "type": "integer",
                    "description": "哪个能力被使用"
                },
                "target_character_id": {
                    "type": "integer",
                    "description": "如果能力有目标角色，指定其ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "target_incident_id": {
                    "type": "integer",
                    "description": "如果能力目标是悲剧，指定其类型"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Use Ability Payload",
            "description": "玩家使用能力的操作负载"
        }
    }
}