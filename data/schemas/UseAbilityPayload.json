{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/UseAbilityPayload",
    "definitions": {
        "UseAbilityPayload": {
            "properties": {
                "player_id": {
                    "type": "integer",
                    "description": "执行操作的玩家ID"
                },
                "character_id": {
                    "type": "integer",
                    "description": "哪个角色的能力被使用"
                },
                "ability_id": {
                    "type": "integer",
                    "description": "哪个能力被使用"
                },
                "target_character_id": {
                    "type": "integer",
                    "description": "如果能力有目标角色，指定其ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "target_incident_id": {
                    "type": "integer",
                    "description": "如果能力目标是悲剧，指定其类型"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Use Ability Payload",
            "description": "玩家使用能力的操作负载"
        }
    }
}