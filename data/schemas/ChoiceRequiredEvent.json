{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/ChoiceRequiredEvent",
    "definitions": {
        "ChoiceRequiredEvent": {
            "properties": {
                "choices": {
                    "items": {
                        "$ref": "#/definitions/tragedylooper.v1.Choice"
                    },
                    "type": "array",
                    "description": "这可能需要更复杂的结构，具体取决于选择  提供给玩家的选项列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Choice Required Event",
            "description": "需要玩家做出选择的事件"
        },
        "tragedylooper.v1.Choice": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "唯一ID，例如 \"target_char_5\" 或 \"effect_choice_0\""
                },
                "description": {
                    "type": "string",
                    "description": "选项的描述"
                },
                "target_character_id": {
                    "type": "integer",
                    "description": "用于目标选择"
                },
                "effect_option_index": {
                    "type": "integer",
                    "description": "用于复合效果中的效果选择"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Choice",
            "description": "Choice 表示玩家可以做出的选择。"
        }
    }
}