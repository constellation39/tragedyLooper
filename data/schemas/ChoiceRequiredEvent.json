{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/ChoiceRequiredEvent",
    "definitions": {
        "ChoiceRequiredEvent": {
            "properties": {
                "request_id": {
                    "type": "string",
                    "description": "A unique ID for this choice request, e.g. \"card_22_target\""
                },
                "player_id": {
                    "type": "integer",
                    "description": "需要做选择的玩家"
                },
                "choices": {
                    "items": {
                        "$ref": "#/definitions/tragedylooper.v1.Choice"
                    },
                    "type": "array",
                    "description": "提供给玩家的选项列表"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Choice Required Event",
            "description": "需要玩家做出选择的事件"
        },
        "tragedylooper.v1.Choice": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "唯一ID，例如 \"option_char_5\" 或 \"option_loc_shrine\""
                },
                "description": {
                    "type": "string",
                    "description": "选项的描述"
                },
                "character_id": {
                    "type": "integer"
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "player_id": {
                    "type": "integer"
                },
                "effect_option_index": {
                    "type": "integer",
                    "description": "用于复合效果中的效果选择"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Choice",
            "description": "Choice 表示玩家可以做出的选择。"
        }
    }
}