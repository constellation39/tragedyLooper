{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/StatCondition",
    "definitions": {
        "StatCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "The target character selector."
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "STAT_TYPE_PARANOIA",
                        1,
                        "STAT_TYPE_GOODWILL",
                        2,
                        "STAT_TYPE_INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type",
                    "description": "The type of stat to check."
                },
                "comparator": {
                    "enum": [
                        "COMPARATOR_UNSPECIFIED",
                        0,
                        "COMPARATOR_GREATER_THAN",
                        1,
                        "COMPARATOR_LESS_THAN",
                        2,
                        "COMPARATOR_EQUAL_TO",
                        3,
                        "COMPARATOR_GREATER_THAN_OR_EQUAL",
                        4,
                        "COMPARATOR_LESS_THAN_OR_EQUAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Comparator",
                    "description": "The comparator to use."
                },
                "value": {
                    "type": "integer",
                    "description": "The value to compare against."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Condition",
            "description": "StatCondition defines a condition based on a character's stats."
        },
        "tragedylooper.v1.TargetSelector": {
            "properties": {
                "specific_character": {
                    "type": "integer",
                    "description": "A specific character by ID."
                },
                "triggering_character": {
                    "type": "boolean",
                    "description": "The character that triggered the event. A boolean marker."
                },
                "culprit": {
                    "type": "boolean",
                    "description": "The culprit of the event. A boolean marker."
                },
                "victim": {
                    "type": "boolean",
                    "description": "The victim of the event. A boolean marker."
                },
                "character_with_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色"
                },
                "all_characters_at_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "ability_user": {
                    "type": "boolean",
                    "description": "The user of the ability. A boolean marker."
                },
                "ability_target": {
                    "type": "boolean",
                    "description": "The target of the ability. A boolean marker."
                },
                "all_characters": {
                    "type": "boolean",
                    "description": "All characters. A boolean marker."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target Selector",
            "description": "TargetSelector defines a dynamic target for conditions or effects. It uses a oneof to ensure that only one type of selector can be set at a time."
        }
    }
}