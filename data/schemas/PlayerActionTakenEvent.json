{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/PlayerActionTakenEvent",
    "definitions": {
        "PlayerActionTakenEvent": {
            "properties": {
                "player_id": {
                    "type": "integer"
                },
                "action": {
                    "$ref": "#/definitions/tragedylooper.v1.PlayerActionPayload",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player Action Taken Event"
        },
        "tragedylooper.v1.ChooseOptionPayload": {
            "properties": {
                "request_id": {
                    "type": "string",
                    "description": "The ID from the event we are responding to"
                },
                "character_id": {
                    "type": "integer",
                    "description": "做出选择的角色（如果选择与角色相关）"
                },
                "chosen_option_id": {
                    "type": "string",
                    "description": "选择项的ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Choose Option Payload",
            "description": "玩家进行选择的操作负载（例如，在需要选择地盘或目标时）"
        },
        "tragedylooper.v1.MakeGuessPayload": {
            "properties": {
                "guessed_roles": {
                    "additionalProperties": {
                        "type": "integer"
                    },
                    "type": "object",
                    "description": "猜测的角色身份映射，键为 character_id"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Make Guess Payload",
            "description": "主角玩家进行猜测的操作负载"
        },
        "tragedylooper.v1.PassTurnAction": {
            "additionalProperties": true,
            "type": "object",
            "title": "Pass Turn Action",
            "description": "玩家跳过回合的操作负载"
        },
        "tragedylooper.v1.PlayCardPayload": {
            "properties": {
                "card_id": {
                    "type": "integer",
                    "description": "打出的卡牌ID"
                },
                "pre_chosen_options": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object",
                    "description": "Optional: Pre-chosen options to streamline the interaction. Key: request_id from a potential ChoiceRequiredEvent Value: chosen_option_id from that event"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Play Card Payload",
            "description": "玩家打出卡牌的操作负载"
        },
        "tragedylooper.v1.PlayerActionPayload": {
            "properties": {
                "player_id": {
                    "type": "integer",
                    "description": "执行操作的玩家ID"
                },
                "play_card": {
                    "$ref": "#/definitions/tragedylooper.v1.PlayCardPayload",
                    "additionalProperties": true,
                    "description": "打出卡牌的负载"
                },
                "use_ability": {
                    "$ref": "#/definitions/tragedylooper.v1.UseAbilityPayload",
                    "additionalProperties": true,
                    "description": "使用能力的负载"
                },
                "make_guess": {
                    "$ref": "#/definitions/tragedylooper.v1.MakeGuessPayload",
                    "additionalProperties": true,
                    "description": "进行猜测的负载"
                },
                "choose_option": {
                    "$ref": "#/definitions/tragedylooper.v1.ChooseOptionPayload",
                    "additionalProperties": true,
                    "description": "进行选择的负载"
                },
                "pass_turn": {
                    "$ref": "#/definitions/tragedylooper.v1.PassTurnAction",
                    "additionalProperties": true,
                    "description": "玩家跳过"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player Action Payload",
            "description": "通用的玩家操作负载"
        },
        "tragedylooper.v1.UseAbilityPayload": {
            "properties": {
                "character_id": {
                    "type": "integer",
                    "description": "哪个角色的能力被使用"
                },
                "ability_id": {
                    "type": "integer",
                    "description": "哪个能力被使用"
                },
                "pre_chosen_options": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Use Ability Payload",
            "description": "玩家使用能力的操作负载"
        }
    }
}