{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/StatAdjustedEvent",
    "definitions": {
        "StatAdjustedEvent": {
            "properties": {
                "character_id": {
                    "type": "integer"
                },
                "stat_type": {
                    "enum": [
                        "STAT_TYPE_UNSPECIFIED",
                        0,
                        "STAT_TYPE_PARANOIA",
                        1,
                        "STAT_TYPE_GOODWILL",
                        2,
                        "STAT_TYPE_INTRIGUE",
                        3
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Stat Type",
                    "description": "StatType defines the type of character stat."
                },
                "amount": {
                    "type": "integer",
                    "description": "调整量"
                },
                "new_value": {
                    "type": "integer",
                    "description": "调整后的新值"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Stat Adjusted Event",
            "description": "属性调整事件 (替代 Paranoia/Goodwill/IntrigueAdjustedEvent)"
        }
    }
}