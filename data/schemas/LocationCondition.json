{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/LocationCondition",
    "definitions": {
        "LocationCondition": {
            "properties": {
                "target": {
                    "$ref": "#/definitions/tragedylooper.v1.TargetSelector",
                    "additionalProperties": true,
                    "description": "The target character selector."
                },
                "location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "is_at_location": {
                    "type": "boolean",
                    "description": "Whether the character is at the location (defaults to true)."
                },
                "is_alone": {
                    "type": "boolean",
                    "description": "Whether the character is alone at the location."
                },
                "not_alone": {
                    "type": "boolean",
                    "description": "Whether the character is not alone at the location."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location Condition",
            "description": "LocationCondition defines a condition based on a character's location."
        },
        "tragedylooper.v1.TargetSelector": {
            "properties": {
                "specific_character": {
                    "type": "integer",
                    "description": "A specific character by ID."
                },
                "triggering_character": {
                    "type": "boolean",
                    "description": "The character that triggered the event. A boolean marker."
                },
                "culprit": {
                    "type": "boolean",
                    "description": "The culprit of the event. A boolean marker."
                },
                "victim": {
                    "type": "boolean",
                    "description": "The victim of the event. A boolean marker."
                },
                "character_with_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "玩家角色"
                },
                "all_characters_at_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "地点类型（也可通过LocationConfig扩展）"
                },
                "ability_user": {
                    "type": "boolean",
                    "description": "The user of the ability. A boolean marker."
                },
                "ability_target": {
                    "type": "boolean",
                    "description": "The target of the ability. A boolean marker."
                },
                "all_characters": {
                    "type": "boolean",
                    "description": "All characters. A boolean marker."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Target Selector",
            "description": "TargetSelector defines a dynamic target for conditions or effects. It uses a oneof to ensure that only one type of selector can be set at a time."
        }
    }
}