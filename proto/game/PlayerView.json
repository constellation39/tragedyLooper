{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/PlayerView",
    "definitions": {
        "PlayerView": {
            "properties": {
                "game_id": {
                    "type": "string",
                    "description": "游戏唯一标识符"
                },
                "script_id": {
                    "type": "string",
                    "description": "剧本ID"
                },
                "characters": {
                    "additionalProperties": {
                        "$ref": "#/definitions/game.Character",
                        "additionalProperties": true
                    },
                    "type": "object",
                    "description": "角色信息（隐藏身份已移除）"
                },
                "players": {
                    "additionalProperties": {
                        "$ref": "#/definitions/game.Player",
                        "additionalProperties": true
                    },
                    "type": "object",
                    "description": "玩家信息（敏感信息已移除）"
                },
                "current_day": {
                    "type": "integer",
                    "description": "当前天数"
                },
                "current_loop": {
                    "type": "integer",
                    "description": "当前循环次数"
                },
                "current_phase": {
                    "enum": [
                        "GAME_PHASE_UNSPECIFIED",
                        0,
                        "GAME_PHASE_MORNING",
                        1,
                        "GAME_PHASE_CARD_PLAY",
                        2,
                        "GAME_PHASE_CARD_REVEAL",
                        3,
                        "GAME_PHASE_CARD_RESOLVE",
                        4,
                        "GAME_PHASE_ABILITIES",
                        5,
                        "GAME_PHASE_INCIDENTS",
                        6,
                        "GAME_PHASE_DAY_END",
                        7,
                        "GAME_PHASE_LOOP_END",
                        8,
                        "GAME_PHASE_GAME_OVER",
                        9,
                        "GAME_PHASE_PROTAGONIST_GUESS",
                        10
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Game Phase",
                    "description": "GamePhase 定义游戏日期的当前阶段。"
                },
                "active_tragedies": {
                    "additionalProperties": {
                        "type": "boolean"
                    },
                    "type": "object",
                    "description": "活跃的悲剧（公开信息）"
                },
                "prevented_tragedies": {
                    "additionalProperties": {
                        "type": "boolean"
                    },
                    "type": "object",
                    "description": "已阻止的悲剧（公开信息）"
                },
                "your_hand": {
                    "items": {
                        "$ref": "#/definitions/game.Card"
                    },
                    "type": "array",
                    "description": "你的手牌（仅对请求玩家可见）"
                },
                "your_deductions": {
                    "additionalProperties": {
                        "oneOf": [
                            {
                                "type": "array"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "number"
                            },
                            {
                                "type": "object"
                            },
                            {
                                "type": "string"
                            }
                        ],
                        "title": "Value",
                        "description": "`Value` represents a dynamically typed value which can be either null, a number, a string, a boolean, a recursive struct value, or a list of values. A producer of value is expected to set one of these variants. Absence of any variant indicates an error. The JSON representation for `Value` is JSON value."
                    },
                    "type": "object",
                    "description": "你的推理（仅对主角可见）"
                },
                "public_events": {
                    "items": {
                        "$ref": "#/definitions/game.GameEvent"
                    },
                    "type": "array",
                    "description": "公开事件"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player View",
            "description": "PlayerView 表示特定玩家的游戏状态过滤视图。"
        },
        "game.Ability": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string",
                    "description": "能力名称"
                },
                "description": {
                    "type": "string",
                    "description": "能力描述"
                },
                "trigger_type": {
                    "enum": [
                        "ABILITY_TRIGGER_TYPE_UNSPECIFIED",
                        0,
                        "ABILITY_TRIGGER_TYPE_DAY_START",
                        1,
                        "ABILITY_TRIGGER_TYPE_MASTERMIND_PHASE",
                        2,
                        "ABILITY_TRIGGER_TYPE_GOODWILL_PHASE",
                        3,
                        "ABILITY_TRIGGER_TYPE_PASSIVE",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Ability Trigger Type",
                    "description": "AbilityTriggerType 定义能力何时可以被触发。"
                },
                "effect": {
                    "$ref": "#/definitions/game.Effect",
                    "additionalProperties": true,
                    "description": "实际效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "每循环只能使用一次"
                },
                "refusal_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态，不用于配置"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Ability",
            "description": "Ability 定义角色的特殊技能。"
        },
        "game.AdjustGoodwillEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Goodwill Effect",
            "description": "AdjustGoodwillEffect 调整角色的好感度。"
        },
        "game.AdjustIntrigueEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Intrigue Effect",
            "description": "AdjustIntrigueEffect 调整角色的阴谋值。"
        },
        "game.AdjustParanoiaEffect": {
            "properties": {
                "amount": {
                    "type": "integer"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Adjust Paranoia Effect",
            "description": "AdjustParanoiaEffect 调整角色的妄想值。"
        },
        "game.Card": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "唯一标识符"
                },
                "name": {
                    "type": "string",
                    "description": "卡牌名称"
                },
                "card_type": {
                    "enum": [
                        "CARD_TYPE_UNSPECIFIED",
                        0,
                        "CARD_TYPE_MOVEMENT",
                        1,
                        "CARD_TYPE_PARANOIA",
                        2,
                        "CARD_TYPE_GOODWILL",
                        3,
                        "CARD_TYPE_INTRIGUE",
                        4,
                        "CARD_TYPE_SPECIAL",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Card Type",
                    "description": "CardType 定义玩家可以打出的卡牌类型。"
                },
                "owner_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "target_type": {
                    "type": "string",
                    "description": "目标类型（\"Character\" 或 \"Location\"）"
                },
                "effect": {
                    "$ref": "#/definitions/game.Effect",
                    "additionalProperties": true,
                    "description": "卡牌效果"
                },
                "once_per_loop": {
                    "type": "boolean",
                    "description": "每循环只能使用一次"
                },
                "used_this_loop": {
                    "type": "boolean",
                    "description": "运行时状态"
                },
                "target_character_id": {
                    "type": "string",
                    "description": "目标角色ID"
                },
                "target_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Card",
            "description": "Card 表示一张行动卡。"
        },
        "game.Character": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "唯一标识符"
                },
                "name": {
                    "type": "string",
                    "description": "角色名称"
                },
                "traits": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "角色特征，例如：[\"Student\", \"Journalist\"]"
                },
                "current_location": {
                    "enum": [
                        "LOCATION_TYPE_UNSPECIFIED",
                        0,
                        "LOCATION_TYPE_HOSPITAL",
                        1,
                        "LOCATION_TYPE_SHRINE",
                        2,
                        "LOCATION_TYPE_CITY",
                        3,
                        "LOCATION_TYPE_SCHOOL",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Type",
                    "description": "LocationType 定义游戏中的可能地点。"
                },
                "paranoia": {
                    "type": "integer",
                    "description": "妄想指数"
                },
                "goodwill": {
                    "type": "integer",
                    "description": "好感度"
                },
                "intrigue": {
                    "type": "integer",
                    "description": "阴谋标记"
                },
                "is_alive": {
                    "type": "boolean",
                    "description": "是否存活"
                },
                "abilities": {
                    "items": {
                        "$ref": "#/definitions/game.Ability"
                    },
                    "type": "array",
                    "description": "角色能力"
                },
                "hidden_role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Character",
            "description": "Character 表示游戏中的一个角色。"
        },
        "game.Effect": {
            "properties": {
                "move_character_effect": {
                    "$ref": "#/definitions/game.MoveCharacterEffect",
                    "additionalProperties": true
                },
                "adjust_paranoia_effect": {
                    "$ref": "#/definitions/game.AdjustParanoiaEffect",
                    "additionalProperties": true
                },
                "adjust_goodwill_effect": {
                    "$ref": "#/definitions/game.AdjustGoodwillEffect",
                    "additionalProperties": true
                },
                "adjust_intrigue_effect": {
                    "$ref": "#/definitions/game.AdjustIntrigueEffect",
                    "additionalProperties": true
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Effect",
            "description": "Effect 接口定义了一个效果的核心行为。"
        },
        "game.GameEvent": {
            "properties": {
                "type": {
                    "enum": [
                        "GAME_EVENT_TYPE_UNSPECIFIED",
                        0,
                        "GAME_EVENT_TYPE_CARD_PLAYED",
                        1,
                        "GAME_EVENT_TYPE_CHARACTER_MOVED",
                        2,
                        "GAME_EVENT_TYPE_PARANOIA_ADJUSTED",
                        3,
                        "GAME_EVENT_TYPE_GOODWILL_ADJUSTED",
                        4,
                        "GAME_EVENT_TYPE_INTRIGUE_ADJUSTED",
                        5,
                        "GAME_EVENT_TYPE_ABILITY_USED",
                        6,
                        "GAME_EVENT_TYPE_TRAGEDY_TRIGGERED",
                        7,
                        "GAME_EVENT_TYPE_TRAGEDY_PREVENTED",
                        8,
                        "GAME_EVENT_TYPE_DAY_ADVANCED",
                        9,
                        "GAME_EVENT_TYPE_LOOP_RESET",
                        10,
                        "GAME_EVENT_TYPE_GAME_OVER",
                        11,
                        "GAME_EVENT_TYPE_PLAYER_GUESS",
                        12
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Game Event Type",
                    "description": "GameEventType for GameEvent"
                },
                "payload": {
                    "additionalProperties": true,
                    "type": "object",
                    "description": "事件负载"
                },
                "timestamp": {
                    "type": "string",
                    "description": "事件时间戳",
                    "format": "date-time"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Game Event",
            "description": "GameEvent 表示游戏中发生的事件。"
        },
        "game.MoveCharacterEffect": {
            "additionalProperties": true,
            "type": "object",
            "title": "Move Character Effect",
            "description": "MoveCharacterEffect 移动一个角色到指定地点。"
        },
        "game.Player": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "唯一标识符"
                },
                "name": {
                    "type": "string",
                    "description": "玩家名称"
                },
                "role": {
                    "enum": [
                        "PLAYER_ROLE_UNSPECIFIED",
                        0,
                        "PLAYER_ROLE_MASTERMIND",
                        1,
                        "PLAYER_ROLE_PROTAGONIST",
                        2
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Player Role",
                    "description": "PlayerRole 定义连接玩家的角色（人类或 LLM）。"
                },
                "is_llm": {
                    "type": "boolean",
                    "description": "是否为LLM玩家"
                },
                "hand": {
                    "items": {
                        "$ref": "#/definitions/game.Card"
                    },
                    "type": "array",
                    "description": "玩家手牌"
                },
                "deduction_knowledge": {
                    "additionalProperties": {
                        "oneOf": [
                            {
                                "type": "array"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "number"
                            },
                            {
                                "type": "object"
                            },
                            {
                                "type": "string"
                            }
                        ],
                        "title": "Value",
                        "description": "`Value` represents a dynamically typed value which can be either null, a number, a string, a boolean, a recursive struct value, or a list of values. A producer of value is expected to set one of these variants. Absence of any variant indicates an error. The JSON representation for `Value` is JSON value."
                    },
                    "type": "object",
                    "description": "主角的推理知识"
                },
                "llm_session_id": {
                    "type": "string",
                    "description": "LLM玩家的会话ID"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Player",
            "description": "Player 表示一个连接的玩家（人类或 LLM）。"
        }
    }
}